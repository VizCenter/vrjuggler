   <path id="jccl.classpath">
      <pathelement path="C:\src\VR Juggler\new-test\juggler\vc9\JCCL_Java\jccl_config.jar;C:\src\VR Juggler\new-test\juggler\vc9\JCCL_Java\jccl_editors.jar;C:\src\VR Juggler\new-test\juggler\vc9\JCCL_Java\RTRC_Plugin_Java\jccl_rtrc.jar" />
