   <property name="tweek.classpath" refid="tweek.classpath" />
   <property name="jccl_config.classpath" refid="jccl_config.classpath" />
   <property name="table_layout_dir" value="C:\src\VR Juggler\new-test\juggler/external/TableLayout" />
   
   <!-- Compile all java sources -->
   <target name="compile">
      <javac destdir="."
             deprecation="on"
             debug="${debug}"
             optimize="${optimize}">
         <src path="${srcdir}" />
         <include name="org/vrjuggler/jccl/editors/**"/>
         <classpath>
            <pathelement path="${tweek.classpath}" />
