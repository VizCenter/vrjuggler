# -----------------------------------------------------------------------------
# Makefile.in for juggler/Utils.  It requires GNU make.
# $Id$
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Utils
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@

# If we are not building in the current directory (the default), put all the
# object files in the Utils subdirectory of ${OBJDIR}.
ifneq (${OBJDIR}, .)
    OBJDIR	:= ${OBJDIR}/Utils
endif

INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Utils
WORKDIR		= ${topdir}/Utils

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.${OBJ_FILE_SUFFIX} ${OBJDIR}

UTILS_SRCS 	= vjFileIO.cpp

UTILS_OBJECTS	:= ${addprefix ${OBJDIR}/,${UTILS_SRCS:.cpp=.${OBJ_FILE_SUFFIX}}}
DEPEND_FILES	:= ${UTILS_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: beforebuild ${UTILS_OBJECTS}

beforebuild:
	@${SHELL} ${scriptdir}/mkinstalldirs ${OBJDIR}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${UTILS_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by make automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif
