default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Input/vjPosition
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Input/vjPosition
WORKDIR		= ${topdir}/Input/vjPosition

# Include source building, dependency and installation.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

DEPEND_SRCS	:= vjBird.cpp		\
                   vjDummyPosition.cpp	\
                   vjFlock.cpp		\
                   vjPosition.cpp	\
                   logiclass.cpp

VJPOS_OBJECTS	:= $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.cpp=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${VJPOS_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${VJPOS_OBJECTS}

