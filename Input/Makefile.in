# -----------------------------------------------------------------------------
# Makefile.in for juggler/Input.  It requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Define ${_LOCAL_CLEAN} and ${_LOCAL_CLEANDEP} to inform the shared 'clean'
# target and shared 'cleandepend' target that there are local '_clean' and
# '_cleandepend' targets to be run besides the standard targets.
_LOCAL_CLEAN	= 1
_LOCAL_CLEANDEP	= 1

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Input
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Input
WORKDIR		= ${topdir}/Input

# Prefix for recursive stuff.
DIRPRFX		= Input/

# Subdirectories to compile.
SUBDIRS		= Filter	\
                  InputManager	\
                  Multi		\
                  ibox		\
		  intersense    \
                  vjGesture	\
                  vjGlove	\
                  vjInput	\
                  vjKeyboard	\
                  vjPosition	\
                  vjSim

# Include the recursive target code.
include ${MKPATH}/vj.rec.mk

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all: dbg opt dso ddso

dbg opt dso ddso obj install:
	@${MAKE} RECTARGET="$@" OPTIMIZER="${OPTIMIZER}"		\
            BASE_OBJDIR="${BASE_OBJDIR}" recursive

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
_clean:
	@${MAKE} RECTARGET="clean" OPTIMIZER="${OPTIMIZER}"	\
            DIRPRFX="Input/" OBJDIR="${OBJDIR}" recursive

_cleandepend:
	@${MAKE} DO_CLEANDEPEND=1 RECTARGET="cleandepend" recursive
