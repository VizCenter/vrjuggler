# -----------------------------------------------------------------------------
# Makefile.in for juggler/Input/vjGlove.  It requires GNU make.
# $Id$
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Input/vjGlove
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Input/vjGlove
WORKDIR		= ${topdir}/Input/vjGlove

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

VJGLOVE_SRCS	:= CyberGloveBasic.cpp		\
                   vjCyberGlove.cpp		\
                   vjGlove.cpp			\
                   vt_glove.cpp			\
        	   vt_error.cpp			\
                   vt_init.cpp			\
                   vt_math3d.cpp		\
                   vt_read_hand_model.cpp	\
                   vt_read_object.cpp		\
                   vt_read_user_cal.cpp		\
                   vt_serial_io.cpp		\
                   vt_virtual_hand.cpp

VJGLOVE_OBJECTS := ${addprefix ${OBJDIR}/,${VJGLOVE_SRCS:.cpp=.o}}
DEPEND_FILES	:= ${VJGLOVE_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${VJGLOVE_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${VJGLOVE_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif
