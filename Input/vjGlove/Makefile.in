default: all

includedir	= @includedir@/Input/vjGlove
srcdir		= @srcdir@
topdir		= @topdir@
top_srcdir	= @top_srcdir@
wwwdir		= ${srcdir}/Doc
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Input/vjGlove
WORKDIR		= ${topdir}/Input/vjGlove

# Include common definitions.
include ${topdir}/Makefile.base
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}
#------------------------

DEPEND_SRCS	:= vjCyberGlove.C	\
                   vt_glove.C		\
        	   vt_error.C		\
                   vt_init.C		\
                   vt_math3d.C		\
                   vt_read_hand_model.C	\
                   vt_read_object.C	\
                   vt_read_user_cal.C	\
                   vt_serial_io.C	\
                   vt_virtual_hand.C

VJGLOVE_OBJECTS := $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.C=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${VJGLOVE_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${VJGLOVE_OBJECTS}

