default: all

includedir	= @includedir@/Input/ibox
srcdir		= @srcdir@
topdir		= @topdir@
top_srcdir	= @top_srcdir@
wwwdir		= ${srcdir}/Doc
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Input/ibox
WORKDIR		= ${topdir}/Input/ibox

# Include common definitions
include ${topdir}/Makefile.base
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}
#------------------------

DEPEND_SRCS	:= drivers.c	\
                   driveunx.c	\
                   hci.c 	\
                   ibox.c

IBOX_OBJECTS	:= $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.c=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${IBOX_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${IBOX_OBJECTS}

