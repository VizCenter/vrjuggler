# -----------------------------------------------------------------------------
# Makefile.in for juggler/Input/vjSim.  It requires GNU make.
# $Id$
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Input/vjSim
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Input/vjSim
WORKDIR		= ${topdir}/Input/vjSim

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

VJSIM_SRCS	:= vjSimAnalog.cpp		\
                   vjSimDigital.cpp		\
                   vjSimGloveGesture.cpp	\
                   vjSimInput.cpp		\
                   vjSimPosition.cpp

VJSIM_OBJECTS	:= ${addprefix ${OBJDIR}/,${VJSIM_SRCS:.cpp=.o}}
DEPEND_FILES	:= ${VJSIM_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${VJSIM_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${VJSIM_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif
