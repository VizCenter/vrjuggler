# -----------------------------------------------------------------------------
# Makefile.in for juggler/Input/vjKeyboard.  It requires GNU make.
# $Id$
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Input/vjKeyboard
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Input/vjKeyboard
WORKDIR		= ${topdir}/Input/vjKeyboard

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

VJKEYBOARD_SRCS		:= vjXWinKeyboard.cpp

VJKEYBOARD_OBJECTS	:= ${addprefix ${OBJDIR}/,${VJKEYBOARD_SRCS:.cpp=.o}}
DEPEND_FILES		:= ${VJKEYBOARD_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${VJKEYBOARD_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${VJKEYBOARD_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif
