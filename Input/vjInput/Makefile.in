# -----------------------------------------------------------------------------
# Makefile.in for juggler/Input/vjInput.  It requires GNU make.
# $Id$
# -----------------------------------------------------------------------------

default: all

# Include common definitions
include @topdir@/Makefile.base

includedir	= @includedir@/Input/vjInput
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Input/vjInput
WORKDIR		= ${topdir}/Input/vjInput

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

VJINPUT_SRCS	:= vjIbox.cpp	\
                   vjInput.cpp

VJINPUT_OBJECTS	:= ${addprefix ${OBJDIR}/,${VJINPUT_SRCS:.cpp=.o}}
DEPEND_FILES	:= ${VJINPUT_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${VJINPUT_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${VJINPUT_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif
