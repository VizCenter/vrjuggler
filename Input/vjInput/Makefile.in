default: all

# Include common definitions
include @topdir@/Makefile.base

includedir	= @includedir@/Input/vjInput
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Input/vjInput
WORKDIR		= ${topdir}/Input/vjInput

# Include dependency and installation targets.
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}
#------------------------

DEPEND_SRCS	:= vjIbox.C	\
                   vjInput.C	\
                   vjKeyboard.C

VJINPUT_OBJECTS	:= $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.C=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${VJINPUT_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${VJINPUT_OBJECTS}

