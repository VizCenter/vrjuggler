default: all

includedir	= @includedir@/Kernel/GL
srcdir		= @srcdir@
topdir		= @topdir@
top_srcdir	= @top_srcdir@
wwwdir		= ${srcdir}/Doc
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Kernel/GL
WORKDIR		= ${topdir}/Kernel/GL

# Include common definitions
include ${topdir}/Makefile.base
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}
#------------------------

OGL_API		:= @OPENGL_API@
OGL_SRCS 	:= vjGlAPIFactory.C	\
                   vjGlDrawManager.C	\
                   vjGlPipe.C		\
                   vjGlWindow.C
DEPEND_SRCS	:= 

ifeq ($(OGL_API),Y)
    DEPEND_SRCS += $(OGL_SRCS)
endif

GL_OBJECTS	= $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.C=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${GL_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${GL_OBJECTS}

