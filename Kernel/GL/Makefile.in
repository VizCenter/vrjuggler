# -----------------------------------------------------------------------------
# Makefile.in for juggler/Kernel/GL.  It requires GNU make.
# $Id$
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Kernel/GL
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@

# If we are not building in the current directory (the default), put all the
# object files in the GL subdirectory of ${OBJDIR}.
ifneq (${OBJDIR}, .)
    OBJDIR	:= ${OBJDIR}/GL
endif

INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Kernel/GL
WORKDIR		= ${topdir}/Kernel/GL

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.${OBJ_FILE_SUFFIX} ${OBJDIR}

OGL_API		:= @OPENGL_API@

GL_SRCS 	:= vjGlDrawManager.cpp	\
                   vjGlPipe.cpp		\
                   vjGlWindow.cpp

ifeq (@OS_TYPE@, Win32)
    GL_SRCS	+= vjGlWinWin32.cpp
else
    GL_SRCS	+= vjGlxWindow.cpp
endif

GL_OBJECTS	:= ${addprefix ${OBJDIR}/,${GL_SRCS:.cpp=.${OBJ_FILE_SUFFIX}}}
DEPEND_FILES	:= ${GL_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: beforebuild ${GL_OBJECTS}

beforebuild:
ifeq (${OGL_API}, Y)
	@${SHELL} ${scriptdir}/mkinstalldirs ${OBJDIR}
endif

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${GL_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by make automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif
