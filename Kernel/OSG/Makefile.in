# -----------------------------------------------------------------------------
# Makefile.in for juggler/Kernel/OSG.  It requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Kernel/OSG
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@

# If we are not building in the current directory (the default), put all the
# object files in the OSG subdirectory of ${OBJDIR}.
ifneq (${OBJDIR}, .)
    OBJDIR	:= ${OBJDIR}/OSG
endif

INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Kernel/OSG
WORKDIR		= ${topdir}/Kernel/OSG

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.${OBJ_FILE_SUFFIX} ${OBJDIR}

OSG_API 	= @OSG_API@

ifeq (${OSG_API}, Y)
#OSG_SRCS 	= vjOsgApp.cpp
#DEPEND_FILES	= ${OSG_SRCS:.cpp=.d}
endif

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: # beforebuild ${OSG_OBJECTS}

beforebuild:
ifeq (${OSG_API}, Y)
	@$(SHELL) $(scriptdir)/mkinstalldirs $(OBJDIR)
endif

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${OSG_OBJECTS}

