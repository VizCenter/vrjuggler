default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Kernel/Pf
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
OBJDIR		:= ${OBJDIR}/Pf
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Kernel/Pf
WORKDIR		= ${topdir}/Kernel/Pf

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

PF_API		:= @PERFORMER_API@
PF_SRCS 	:= vjPfDrawManager.cpp
DEPEND_SRCS	:=

ifeq ($(PF_API),Y)
    DEPEND_SRCS += $(PF_SRCS)
endif

PF_OBJECTS	= $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.cpp=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: beforebuild ${PF_OBJECTS}

beforebuild:
ifeq (${PF_API}, Y)
	@${scriptdir}/mkinstalldirs ${OBJDIR}
endif

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${PF_OBJECTS}

