default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Kernel/Pf
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Kernel/Pf
WORKDIR		= ${topdir}/Kernel/Pf

# Include dependency and installation targets.
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}
#------------------------

PF_API		:= @PERFORMER_API@
PF_SRCS 	:= vjPfAPIFactory.C vjPfDrawManager.C
DEPEND_SRCS	:= 

ifeq ($(PF_API),Y)
    DEPEND_SRCS += $(PF_SRCS)
endif

PF_OBJECTS	= $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.C=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${PF_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${PF_OBJECTS}

