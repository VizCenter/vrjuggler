# -----------------------------------------------------------------------------
# Makefile.in for juggler/Kernel/Pf.  It requires GNU make.
# $Id$
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Kernel/Pf
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@

# If we are not building in the current directory (the default), put all the
# object files in the Pf subdirectory of ${OBJDIR}.
ifneq (${OBJDIR}, .)
    OBJDIR	:= ${OBJDIR}/Pf
endif

INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Kernel/Pf
WORKDIR		= ${topdir}/Kernel/Pf

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

## Linux Performer must have the -O flag to compile ##
ifeq (${PLATFORM}, Linux)
    override OPTIMIZER += -O
endif

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.${OBJ_FILE_SUFFIX} ${OBJDIR}

PF_API		:= @PERFORMER_API@

PF_SRCS 	:= vjPfDrawManager.cpp	\
                   vjPfUtil.cpp

PF_OBJECTS	:= ${addprefix ${OBJDIR}/,${PF_SRCS:.cpp=.${OBJ_FILE_SUFFIX}}}
DEPEND_FILES	:= ${PF_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: beforebuild ${PF_OBJECTS}

beforebuild:
ifeq (${PF_API}, Y)
	@${SHELL} ${scriptdir}/mkinstalldirs ${OBJDIR}
endif

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${PF_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by make automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif
