# -----------------------------------------------------------------------------
# Makefile.in for juggler/test/Sync
# $Id$
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

.SUFFIXES: .cpp .@OBJ_FILE_SUFFIX@

srcdir		= @srcdir@

# =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
# NOTE: When compiling against the debugging version of VR Juggler, you
# *MUST* add -D_DEBUG to $(COMPILE) for these test programs to work properly.
# If compiling against the optimized version, you must add -D_OPT instead.
# =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
COMPILE		= @CXX@ @DEFS@ $(VJ_INCLUDES) @CPPFLAGS@ @CXXFLAGS@ @DBG_FLAGS@
LINK		= @CXX@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_LINK_FLAGS@
VJ_INCLUDES	= @INCLUDES@ -I$(VJ_BASE_DIR)/include -I$(srcdir)
VJ_LIBS		= @TEST_VJ_LIBS_BASIC@ @TEST_VJ_LIBS_GL@ @TEST_LIBS_BASIC@
VPATH		= @srcdir@

# If the library uses POSIX threads, "-lpthread" must also be added to the
# list of libraries.
#
# The proper library path must be specified depending on the Application
# Binary Interface (ABI) used.  For o32 binaries, -L/usr/lib is the
# appropriate path.  For n32 binaries, use -L/usr/lib32.  For 64-bit binaries,
# use -L/usr/lib64.
EXTRA_LIBS	= @TEST_EXTRA_LIBS_BASIC@ @TEST_EXTRA_LIBS_GL@

SYNC_PROGS	= test testBarrier testCond

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: $(SYNC_PROGS)

test: test.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ test.@OBJ_FILE_SUFFIX@ $(VJ_LIBS) $(EXTRA_LIBS)

testBarrier: testBarrier.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ testBarrier.@OBJ_FILE_SUFFIX@ $(VJ_LIBS) $(EXTRA_LIBS)

testCond: testCond.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ testCond.@OBJ_FILE_SUFFIX@ $(VJ_LIBS) $(EXTRA_LIBS)

.cpp.@OBJ_FILE_SUFFIX@:
	$(COMPILE) @OBJ_NAME_FLAG@ -c $<

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f Makedepend $(SYNC_PROGS) *.exe *.ilk *.@OBJ_FILE_SUFFIX@	\
          *core *.?db so_locations
	rm -rf ./ii_files
