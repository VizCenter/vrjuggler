# -----------------------------------------------------------------------------
# Makefile.in for juggler/test/ogl/cubes
# $Id$
# -----------------------------------------------------------------------------

srcdir		= @srcdir@

COMPILE		= @CXX@ @DEFS@ ${VJ_INCLUDES} @CPPFLAGS@ @CXXFLAGS@ -g
VJ_INCLUDES	= @INCLUDES@ -I${VJ_BASE_DIR}/include -I${srcdir}
VJ_LIBS		= -L${VJ_BASE_DIR}/lib -lJuggler
VPATH		= @srcdir@

# This test program requires the following libraries to be linked:
#
#     -lpf_ogl -lpfdu_ogl -lpfui -lpfutil_ogl -limage -lGLU -lGL -lXext \
#     -lXmu -lX11 -lm -lC
#
# If the library uses POSIX threads, "-lpthread" must also be added to the
# list of libraries.
#
# The proper library path must be specified depending on the Application
# Binary Interface (ABI) used.  For o32 binaries, -L/usr/lib is the
# appropriate path.  For n32 binaries, use -L/usr/lib32.  For 64-bit binaries,
# use -L/usr/lib64.
EXTRA_LIBS	= @TEST_EXTRA_LIBS@

OBJECTS		= cubes.o

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: cubes

cubes: ${OBJECTS}
	${COMPILE} -o $@ ${OBJECTS} ${VJ_LIBS} ${EXTRA_LIBS}

cubes.o: cubes.C
	${COMPILE} -c -o $@ ${srcdir}/cubes.C

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f Makedepend cubes ${OBJECTS} core so_locations
	rm -rf ./ii_files
