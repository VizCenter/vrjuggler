.SUFFIXES: .cpp

srcdir		= @srcdir@

COMPILE		= @CXX@ @DEFS@ ${VJ_INCLUDES} @CPPFLAGS@ @CXXFLAGS@ -g
VJ_INCLUDES	= @INCLUDES@ -I${VJ_BASE_DIR}/include -I${srcdir}
VPATH		= @srcdir@

OBJECTS		= main.o

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: run

run: ${OBJECTS}
	${COMPILE} -o $@ ${OBJECTS}

.cpp.o:
	${COMPILE} -c $<

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f Makedepend run ${OBJECTS} core so_locations
	rm -rf ./ii_files
