# -----------------------------------------------------------------------------
# Makefile.in for juggler/test/input
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

.SUFFIXES: .cpp .@OBJ_FILE_SUFFIX@

srcdir		= @srcdir@

EXTRA_FLAGS	= @APP_EXTRA_FLAGS@
COMPILE		= @CXX@ @DEFS@ $(VJ_INCLUDES) @CPPFLAGS@ @CXXFLAGS@ @DBG_FLAGS@ $(EXTRA_FLAGS)
LINK		= @CXX@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_LINK_FLAGS@ $(EXTRA_FLAGS)
VJ_INCLUDES	= @INCLUDES@ -I$(VJ_BASE_DIR)/include -I$(srcdir)
VJ_LIBS		= @APP_VJ_LIBS_BEGIN@ @APP_VJ_LIBS_BASIC@ @APP_VJ_LIBS_GL@ @APP_VJ_LIBS_END@ @APP_LIBS_BASIC@
VPATH		= @srcdir@:@srcdir@/../../Input/vjPosition

# OpenGL test programs require the following libraries to be linked:
#
#     -lGLU -lGL -lX11 -lXext -lm
#
# If the library uses POSIX threads, the appropriate pthread enabling option
# must also be added to the list of libraries.  In most cases, this will be
# "-lpthread".
#
# The proper library path must be specified depending on the Application
# Binary Interface (ABI) used.  For n32 binaries, use -L/usr/lib32.  For
# 64-bit binaries, use -L/usr/lib64.
EXTRA_LIBS	= @APP_EXTRA_LIBS_BEGIN@ @APP_EXTRA_LIBS_BASIC@ @APP_EXTRA_LIBS_GL@ @APP_EXTRA_LIBS_END@

PROGS		= go-ibox		\
                  aFlockTest		\
                  vjFlockTest		\
                  aMotionStarTest	\
                  dummyTrackd		\
                  fsPinchGloveTest

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: $(PROGS)

# ----------------
# aFlock test driver
# ----------------
aFlockTest: aFlockTest.@OBJ_FILE_SUFFIX@ aFlock.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ aFlockTest.@OBJ_FILE_SUFFIX@ aFlock.@OBJ_FILE_SUFFIX@ 

# ----------------
# vjFlock test driver
# ----------------
vjFlockTest: vjFlockTest.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ vjFlockTest.@OBJ_FILE_SUFFIX@ $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# trackd test driver
# ----------------
dummyTrackd: dummyTrackd.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ dummyTrackd.@OBJ_FILE_SUFFIX@ $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# aMotionStar test driver
# ----------------
aMotionStarTest: aMotionStarTest.@OBJ_FILE_SUFFIX@			\
                 aMotionStar.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ aMotionStarTest.@OBJ_FILE_SUFFIX@			\
          aMotionStar.@OBJ_FILE_SUFFIX@ -lm

# ----------------
# new
# ----------------
new: new.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ new.@OBJ_FILE_SUFFIX@ $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# go-ibox
# ----------------
go-ibox: main-ibox.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ main-ibox.@OBJ_FILE_SUFFIX@ $(VJ_LIBS) $(EXTRA_LIBS)

# ----------------
# fsPinchGloveTest
# ----------------
fsPinchGloveTest: fsPinchGloveTest.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ fsPinchGloveTest.@OBJ_FILE_SUFFIX@ $(VJ_LIBS)	\
          $(EXTRA_LIBS)

.cpp.@OBJ_FILE_SUFFIX@:
	$(COMPILE) @OBJ_NAME_FLAG@ -c $<

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f Makedepend $(PROGS) *.exe *.ilk *.@OBJ_FILE_SUFFIX@ *core	\
          *.?db so_locations
	rm -rf ./ii_files
