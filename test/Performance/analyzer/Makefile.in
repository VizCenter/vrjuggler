# -----------------------------------------------------------------------------
# Makefile.in for test/Performance/analyzer.  It requires GNU make.
# $Id$
# -----------------------------------------------------------------------------

default: all

srcdir	= @srcdir@

# JDK-related variables.  ${JAVAC_CMD} is the compile line for javac when
# building .java files.
JAR		= @JAR@
JAVAC		= @JAVAC@
JAVAC_CMD	= ${JAVAC} -d . -classpath ${GUI_CLASSPATH}
JDK_HOME	= @JDK_HOME@

# If the user defined ${CLASSPATH} (either as an environment variable or a
# command-line argument), put it in ${GUI_CLASSPATH}.  Otherwise, leave it
# out.
ifdef CLASSPATH
    GUI_CLASSPATH	= ${CLASSPATH}:${srcdir}:${JDK_HOME}/lib/classes.zip:${VJ_BASE_DIR}/bin/swingall.jar
else
    GUI_CLASSPATH	= ${srcdir}:${JDK_HOME}/lib/classes.zip:${VJ_BASE_DIR}/bin/swingall.jar
endif

# Include common definitions.
include @topdir@/Makefile.base

ANALYZER_SOURCES = Analyzer.java DataLine.java PerfDataCollector.java

ANALYZER_OBJS = ${ANALYZER_SOURCES:.java=.class}


# Search path information.
vpath
vpath %.java @srcdir@
vpath %.class .

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all: classfiles

classfiles: ${ANALYZER_OBJS} 
	@echo "------------------------------------------------"
	@echo "Made all classfiles"
	@echo "------------------------------------------------"

VjConfig/%.class: %.java
	${JAVAC_CMD} $<

VjGUI/%.class: %.java
	${JAVAC_CMD} $<

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${ANALYZER_OBJS} 

clobber: clean

