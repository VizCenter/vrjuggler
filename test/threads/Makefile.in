# -----------------------------------------------------------------------------
# Makefile.in for juggler/test/threads
# $Id$
# -----------------------------------------------------------------------------

srcdir		= @srcdir@

COMPILE		= @CXX@ @DEFS@ ${VJ_INCLUDES} @CPPFLAGS@ @CXXFLAGS@ -g
VJ_INCLUDES	= @INCLUDES@ -I${VJ_BASE_DIR}/include -I${srcdir}
VJ_LIBS		= @TEST_VJ_LIBS_BASIC@ @TEST_VJ_LIBS_GL@ @TEST_LIBS_BASIC@
VPATH		= @srcdir@

# If the library uses POSIX threads, "-lpthread" must also be added to the
# list of libraries.
#
# The proper library path must be specified depending on the Application
# Binary Interface (ABI) used.  For o32 binaries, -L/usr/lib is the
# appropriate path.  For n32 binaries, use -L/usr/lib32.  For 64-bit binaries,
# use -L/usr/lib64.
EXTRA_LIBS	= @TEST_EXTRA_LIBS_BASIC@

TEST_OBJECTS	= test.o

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: test

test: ${TEST_OBJECTS}
	${COMPILE} -o $@ ${TEST_OBJECTS} ${VJ_LIBS} ${EXTRA_LIBS}

test.o:
	${COMPILE} -c -o $@ ${srcdir}/test.cpp

.cpp.o:
	${COMPILE} -c -o $@ $<

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f Makedepend test ${TEST_OBJECTS} core so_locations
	rm -rf ./ii_files
