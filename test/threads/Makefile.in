# -----------------------------------------------------------------------------
# Makefile.in for juggler/test/threads
# $Id$
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

.SUFFIXES: .cpp .@OBJ_FILE_SUFFIX@

srcdir		= @srcdir@

# =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
# NOTE: When compiling against the debugging version of VR Juggler, you
# *MUST* add -D_DEBUG to $(COMPILE) for these test programs to work properly.
# If compiling against the optimized version, you must add -D_OPT instead.
# =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
EXTRA_FLAGS	= @APP_EXTRA_FLAGS@
COMPILE		= @CXX@ @DEFS@ $(VJ_INCLUDES) @CPPFLAGS@ @CXXFLAGS@ @DBG_FLAGS@ $(EXTRA_FLAGS)
LINK		= @CXX@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_LINK_FLAGS@ $(EXTRA_FLAGS)
VJ_INCLUDES	= @INCLUDES@ -I$(VJ_BASE_DIR)/include -I$(srcdir)
VJ_LIBS		= @APP_VJ_LIBS_BASIC@ @APP_VJ_LIBS_GL@ @APP_LIBS_BASIC@
VPATH		= @srcdir@

# If the library uses POSIX threads, "-lpthread" must also be added to the
# list of libraries.
#
# The proper library path must be specified depending on the Application
# Binary Interface (ABI) used.  For o32 binaries, -L/usr/lib is the
# appropriate path.  For n32 binaries, use -L/usr/lib32.  For 64-bit binaries,
# use -L/usr/lib64.
EXTRA_LIBS	= @APP_EXTRA_LIBS_BEGIN@ @APP_EXTRA_LIBS_BASIC@ @APP_EXTRA_LIBS_GL@ @APP_EXTRA_LIBS_END@

TEST_PROGS	= test stlTest testPool testSelfPerformance testTSD_Performance

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: $(TEST_PROGS)

test: test.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ test.@OBJ_FILE_SUFFIX@ $(VJ_LIBS) $(EXTRA_LIBS)

stlTest: stlTest.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ stlTest.@OBJ_FILE_SUFFIX@ $(VJ_LIBS) $(EXTRA_LIBS)

testPool: testPool.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ testPool.@OBJ_FILE_SUFFIX@ $(VJ_LIBS) $(EXTRA_LIBS)
	
testSelfPerformance: testSelfPerformance.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ testSelfPerformance.@OBJ_FILE_SUFFIX@ $(VJ_LIBS) $(EXTRA_LIBS)
	
testTSD_Performance: testTSD_Performance.@OBJ_FILE_SUFFIX@
	$(LINK) -o $@ testTSD_Performance.@OBJ_FILE_SUFFIX@ $(VJ_LIBS) $(EXTRA_LIBS)		

.cpp.@OBJ_FILE_SUFFIX@:
	$(COMPILE) @OBJ_NAME_FLAG@ -c $<

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f Makedepend $(TEST_PROGS) *.exe *.ilk *.@OBJ_FILE_SUFFIX@	\
          *core *.?db so_locations
	rm -rf ./ii_files
