# -----------------------------------------------------------------------------
# Makefile.in for juggler/test/Matrix
# $Id$
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

.SUFFIXES: .cpp .@OBJ_FILE_SUFFIX@

srcdir		= @srcdir@

COMPILE		= @CXX@ @DEFS@ $(VJ_INCLUDES) @CPPFLAGS@ @CXXFLAGS@ @DBG_FLAGS@
LINK		= @CXX@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_LINK_FLAGS@
VJ_INCLUDES	= @INCLUDES@ -I$(VJ_BASE_DIR)/include -I$(srcdir)
VJ_LIBS		= @TEST_VJ_LIBS_BASIC@ @TEST_VJ_LIBS_GL@ @TEST_LIBS_BASIC@
VPATH		= @srcdir@

# If the library uses POSIX threads, "-lpthread" must also be added to the
# list of libraries.
#
# The proper library path must be specified depending on the Application
# Binary Interface (ABI) used.  For o32 binaries, -L/usr/lib is the
# appropriate path.  For n32 binaries, use -L/usr/lib32.  For 64-bit binaries,
# use -L/usr/lib64.
EXTRA_LIBS	= @TEST_EXTRA_LIBS_BASIC@

OBJECTS		= matrix.@OBJ_FILE_SUFFIX@
MATRIX_PROGS	= test

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: $(MATRIX_PROGS)

test: $(OBJECTS)
	$(LINK) -o $@ $(OBJECTS) $(VJ_LIBS) $(EXTRA_LIBS)

matrix.@OBJ_FILE_SUFFIX@: matrix.cpp

.cpp.@OBJ_FILE_SUFFIX@:
	$(COMPILE) @OBJ_NAME_FLAG@ -c $<

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f Makedepend $(MATRIX_PROGS) *.exe *.ilk *core *.?db	\
          *.@OBJ_FILE_SUFFIX@ so_locations
	rm -rf ./ii_files
