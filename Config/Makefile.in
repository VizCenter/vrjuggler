default: all

includedir	= @includedir@/Config
srcdir		= @srcdir@
topdir		= @topdir@
top_srcdir	= @top_srcdir@
wwwdir		= ${srcdir}/Doc
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Config
WORKDIR		= ${topdir}/Config

# Include common definitions.
include ${topdir}/Makefile.base
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}
#------------------------

DEPEND_SRCS	:= vjChunkDesc.C	\
                   vjChunkDescDB.C	\
                   vjConfigChunk.C	\
                   vjConfigChunkDB.C	\
                   vjPropertyDesc.C	\
                   vjParseUtil.C	\
                   vjProperty.C		\
                   vjPropertyDesc.C

CONFIG_OBJECTS	:= $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.C=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${CONFIG_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${CONFIG_OBJECTS}

