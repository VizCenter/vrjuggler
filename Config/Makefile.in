# -----------------------------------------------------------------------------
# Makefile.in for juggler/Config.  It requires GNU make.
# $Id$
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Config
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Config
WORKDIR		= ${topdir}/Config

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

CONFIG_SRCS	:= vjChunkDesc.cpp	\
                   vjChunkDescDB.cpp	\
                   vjChunkFactory.cpp	\
                   vjConfigChunk.cpp	\
                   vjConfigChunkDB.cpp	\
                   vjPropertyDesc.cpp	\
                   vjParseUtil.cpp	\
                   vjVarValue.cpp	\
                   vjProperty.cpp	\
                   vjPropertyDesc.cpp

CONFIG_OBJECTS	:= ${addprefix ${OBJDIR}/,${CONFIG_SRCS:.cpp=.o}}
DEPEND_FILES	:= ${CONFIG_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${CONFIG_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${CONFIG_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif
