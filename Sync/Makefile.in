default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Sync
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Sync
WORKDIR		= ${topdir}/Sync

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

# Determine what objects to use.
ifeq (@SYNC_SYS@,POSIX)
    DEPEND_SRCS :=
else
    DEPEND_SRCS := vjMutexSGI.cpp vjSemaphoreSGI.cpp
endif

SYNC_OBJECTS	= $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.cpp=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${SYNC_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${SYNC_OBJECTS}

