# -----------------------------------------------------------------------------
# Makefile.in for juggler/Sync.  It requires GNU make.
# $Id$
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Sync
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Sync
WORKDIR		= ${topdir}/Sync

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

SYNC_SRCS	= vjCondGeneric.cpp	\
                  vjRWMutex.cpp

# Determine what objects to use.
ifeq (@SYNC_SYS@,POSIX)
    SYNC_SRCS	+= vjBarrier.cpp	\
                   vjMutexPosix.cpp
else
    SYNC_SRCS	+= vjBarrierSGI.cpp	\
                   vjMutexSGI.cpp	\
                   vjSemaphoreSGI.cpp
endif

SYNC_OBJECTS	:= ${addprefix ${OBJDIR}/,${SYNC_SRCS:.cpp=.o}}
DEPEND_FILES	:= ${SYNC_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${SYNC_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${SYNC_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif
