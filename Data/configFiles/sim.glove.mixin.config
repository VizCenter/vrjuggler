SimGloveGesture
  Name "SimGloveGesture"
  keyboardProxy { "GloveKeyProxy" }
  keyPairs { 
      KeyModPair
        Name "keyPairs 0"
        modKey { "NONE" }
        key { "MOUSE_BUT1" }
        end
 
      KeyModPair
        Name "keyPairs 1"
        modKey { "NONE" }
        key { "MOUSE_BUT2" }
        end
 
      KeyModPair
        Name "keyPairs 2"
        modKey { "NONE" }
        key { "MOUSE_BUT3" }
        end
 
      KeyModPair
        Name "keyPairs 3"
        modKey { "ALT" }
        key { "MOUSE_BUT1" }
        end
 }
  trainedFilename { "${VJ_BASE_DIR}/share/Data/gesture/simpleSimGestures.dat" }
  glovePos { "GlovePos Proxy" }
  end
KeyboardProxy
  Name "GloveKeyProxy"
  device { "Glove Keyboard" }
  end
PosProxy
  Name "GlovePos Proxy"
  device { "SimGlovePos" }
  unit { "0" }
  etrans { "False" }
  translate { "0.166" "0.0" "0.0" }
  rotate { "0.0" "0.0" "-90.0" }
  useFilter { "False" }
  sigmoidParams { 
      sigmoid_linear_pos_filter
        Name "sigmoidParams 0"
        minDist { "0.0" }
        maxDist { "0.0" }
        maxThreshold { "0.0" }
        end
 }
  end
SimPosition
  Name "SimGlovePos"
  keyboardProxy { "GloveKeyProxy" }
  keyPairs { 
      KeyModPair
        Name "Forward"
        modKey { "ALT" }
        key { "MOUSE_NEGY" }
        end
 
      KeyModPair
        Name "Back"
        modKey { "ALT" }
        key { "MOUSE_POSY" }
        end
 
      KeyModPair
        Name "Left"
        modKey { "CTRL" }
        key { "MOUSE_NEGX" }
        end
 
      KeyModPair
        Name "Right"
        modKey { "CTRL" }
        key { "MOUSE_POSX" }
        end
 
      KeyModPair
        Name "Up"
        modKey { "CTRL" }
        key { "MOUSE_NEGY" }
        end
 
      KeyModPair
        Name "Down"
        modKey { "CTRL" }
        key { "MOUSE_POSY" }
        end
 
      KeyModPair
        Name "Rot Right"
        modKey { "SHIFT" }
        key { "MOUSE_NEGX" }
        end
 
      KeyModPair
        Name "Rot Left"
        modKey { "SHIFT" }
        key { "MOUSE_POSX" }
        end
 
      KeyModPair
        Name "Rot Up"
        modKey { "SHIFT" }
        key { "MOUSE_NEGY" }
        end
 
      KeyModPair
        Name "Rot Down"
        modKey { "SHIFT" }
        key { "MOUSE_POSY" }
        end
 
      KeyModPair
        Name "Rot CCW"
        modKey { "SHIFT" }
        key { "MOUSE_BUT1" }
        end
 
      KeyModPair
        Name "Rot CW"
        modKey { "SHIFT" }
        key { "MOUSE_BUT3" }
        end
 }
  initialPos { "1.0" "5.0" "0.0" }
  initialRot { "0.0" "0.0" "0.0" }
  dtrans { "0.05" }
  drot { "0.5" }
  transCoordSystem { "Global" }
  rotCoordSystem { "Local" }
  end
Keyboard
  Name "Glove Keyboard"
  width { "200" }
  height { "200" }
  origin { "950" "85" }
  msens { "2.0" }
  display_number { "0" }
  lock_key { "KEY_NONE" }
  start_locked { "False" }
  sleep_time { "0" }
  end
proxyAlias
  Name "VJGlove"
  aliasName { "VJGlove" }
  proxyPtr { "GloveProxy" }
  end
proxyAlias
  Name "VJGesture"
  aliasName { "VJGesture" }
  proxyPtr { "GestureProxy" }
  end
GloveProxy
  Name "GloveProxy"
  device { "SimGloveGesture" }
  unit { "0" }
  visible { "True" }
  end
GestureProxy
  Name "GestureProxy"
  device { "SimGloveGesture" }
  end
End
