# -----------------------------------------------------------------------------
# Makefile.in for juggler/tools
# $Id$
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

.SUFFIXES: .cpp .@OBJ_FILE_SUFFIX@

srcdir		= @srcdir@

COMPILE		= @CXX@ @DEFS@ $(VJ_INCLUDES) @CPPFLAGS@ @CXXFLAGS@ @DBG_FLAGS@
LINK		= @CXX@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_LINK_FLAGS@

GLUT_LIB	= -B static -L/home/users/allenb/Libs/glut/lib32 -lglut
GLUT_INC	= -I/home/users/allenb/Libs/glut/include

GLUI_LIB	= -B static -L/home/users/allenb/Libs/glui_v2/lib -lglui
GLUI_INC 	= -I/home/users/allenb/Libs/glui_v2

COMMON_INC	= -I$(srcdir)/common

VJ_INCLUDES	= @INCLUDES@ -I$(VJ_BASE_DIR)/include -I$(srcdir)	\
                  $(COMMON_INC) $(GLUT_INC) $(GLUI_INC)
VJ_LIBS		= @TEST_VJ_LIBS_BASIC@ @TEST_VJ_LIBS_GL@ @TEST_LIBS_BASIC@
VPATH		= @srcdir@:@srcdir@/common

# This test program requires the following libraries to be linked:
#
#     -lGLU -lGL -lXext -lXmu -lX11 -lm -lC
#
# If the library uses POSIX threads, "-lpthread" must also be added to the
# list of libraries.
#
# The proper library path must be specified depending on the Application
# Binary Interface (ABI) used.  For o32 binaries, -L/usr/lib is the
# appropriate path.  For n32 binaries, use -L/usr/lib32.  For 64-bit binaries,
# use -L/usr/lib64.
EXTRA_LIBS	= $(GLUI_LIB) $(GLUT_LIB) @TEST_EXTRA_LIBS_BASIC@ @TEST_EXTRA_LIBS_GL@

TRACKER_CONFIG_OBJECTS = trackerConfig.@OBJ_FILE_SUFFIX@	\
                         sgGlutApp.@OBJ_FILE_SUFFIX@		\
                         sgGlutWin.@OBJ_FILE_SUFFIX@		\
                         sgInput.@OBJ_FILE_SUFFIX@

# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: trackerConfig

trackerConfig: $(TRACKER_CONFIG_OBJECTS)
	$(LINK) -o $@ $(TRACKER_CONFIG_OBJECTS) $(VJ_LIBS) $(EXTRA_LIBS)

.cpp.@OBJ_FILE_SUFFIX@:
	$(COMPILE) @OBJ_NAME_FLAG@ -c $<

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -f Makedepend trackerConfig trackerConfig.exe		\
          trackerConfig.ilk $(TRACKER_CONFIG_OBJECTS) *core so_locations *.?db
	rm -rf ./ii_files
