DYLIB_PROF_DEPS_GL=	@DYLIB_PROF_DEPS_GL@
DYLIB_PROF_DEPS_PF=	@DYLIB_PROF_DEPS_PF@

VJ_LIB_STATIC=		$(VJ_LIBRARY)$(STATIC_SUFFIX).$(STATICLIB_EXT)
