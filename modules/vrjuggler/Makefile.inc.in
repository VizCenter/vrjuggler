# Version information.
PARAM_HEADER=	vrj/vrjParam.h
PARAM_SOURCE=	vrj/vrjParam.cpp
BRANCH=		VRJ_RELENG_2_0_BRANCH
CANON_NAME=	Kenji
VER_ARGS=	-f $(VJROOT_ABS)/VERSION -s @VPR_SUBSYSTEM@		\
