<?xml version="1.0" encoding="UTF-8"?>
<project name="vrjconfig" default="dist" basedir=".">
   <property name="srcdir" location="@srcdir@" />
   <property name="topdir" location="@topdir@" />
   <property name="debug" value="on" />
   <property name="optimize" value="off" />

   <path id="tweek.classpath">
      <pathelement path="@TWEEK_JARS@" />
      <pathelement path="@TWEEK_EXT_JARS@" />
   </path>

   <path id="jccl.classpath">
      <pathelement path="@JCCL_JARS@" />
   </path>

   <property name="tweek.classpath" refid="tweek.classpath" />
   <property name="jccl.classpath" refid="jccl.classpath" />

   <!-- Compile all java sources -->
   <target name="compile">
      <javac destdir="."
             deprecation="on"
             debug="${debug}"
             optimize="${optimize}">
         <src path="${srcdir}" />
         <include name="org/vrjuggler/vrjconfig/**"/>
         <classpath>
            <pathelement path="${tweek.classpath}" />
            <pathelement path="${jccl.classpath}" />
         </classpath>
      </javac>
   </target>

   <!-- Create the distribution jar -->
   <target name="dist" depends="compile">
       <jar destfile="VRJConfig.jar" basedir=".">
         <include name="org/vrjuggler/vrjconfig/**" />
         <fileset dir="${srcdir}">
            <include name="org/vrjuggler/vrjconfig/images/*" />
            <include name="org/vrjuggler/vrjconfig/ui/images/*" />
            <include name="LICENSE-java-laf.txt" />
         </fileset>
         <exclude name="org/vrjuggler/vrjconfig/wizard/cluster/**" />
         <exclude name="org/vrjuggler/vrjconfig/wizard/devices/**" />
         <exclude name="org/vrjuggler/vrjconfig/wizard/simulator/**" />
         <exclude name="org/vrjuggler/vrjconfig/wizard/newdevice/**" />
      </jar>
      <jar destfile="ClusterWizard.jar" basedir=".">
         <include name="org/vrjuggler/vrjconfig/wizard/cluster/**" />
         <fileset dir="${srcdir}">
            <include name="org/vrjuggler/vrjconfig/wizard/cluster/images/*" />
            <include name="org/vrjuggler/vrjconfig/wizard/cluster/Wizard.xml" />
         </fileset>
      </jar>
      <jar destfile="Devices.jar" basedir=".">
         <include name="org/vrjuggler/vrjconfig/wizard/devices/**" />
         <fileset dir="${srcdir}">
            <include name="org/vrjuggler/vrjconfig/wizard/devices/images/*" />
         </fileset>
      </jar>
      <jar destfile="Simulator.jar" basedir=".">
         <include name="org/vrjuggler/vrjconfig/wizard/simulator/**" />
         <fileset dir="${srcdir}">
            <include name="org/vrjuggler/vrjconfig/wizard/simulator/displays/images/*" />
         </fileset>
      </jar>
      <jar destfile="NewDevice.jar" basedir=".">
         <include name="org/vrjuggler/vrjconfig/wizard/newdevice/**" />
         <fileset dir="${srcdir}">
            <include name="org/vrjuggler/vrjconfig/wizard/newdevice/images/*" />
            <include name="org/vrjuggler/vrjconfig/wizard/newdevice/Wizard.xml" />
         </fileset>
      </jar>
   </target>

   <!-- Clean up -->
   <target name="clean">
      <delete failonerror="false">
         <fileset dir="org" includes="**/*.class" />
      </delete>
      <delete file="VRJConfig.jar" failonerror="false" />
      <delete file="ClusterWizard.jar" failonerror="false" />
      <delete file="Devices.jar" failonerror="false" />
      <delete file="Simulator.jar" failonerror="false" />
      <delete file="NewDevice.jar" failonerror="false" />
   </target>
</project>
