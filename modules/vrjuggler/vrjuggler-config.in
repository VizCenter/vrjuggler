%{
%}

vrj_extra_cxxflags="@vrj_extra_cxxflags@"
Juggler_lib="@Juggler_lib@"
Juggler_ogl_lib="@Juggler_ogl_lib@"
Juggler_pf_lib="@Juggler_pf_lib@"

vrj_default_abi="@ABI@"
vrj_default_isa="@ISA@"
vrj_n32_flags="@vrj_n32_flags@"
vrj_64_flags="@vrj_64_flags@"
LIBBITSUF='@LIBBITSUF@'

USE_GCC='@USE_GCC@'

if [ "x$vrj_default_abi" = "xN32" ]; then
    vrj_abi_flags="$vrj_n32_flags"
elif [ "x$vrj_default_abi" = "x64" ]; then
    vrj_abi_flags="$vrj_64_flags"
else
    vrj_abi_flags=''
fi

if [ "x$USE_GCC" != "xyes" ]; then
   if [ "x$vrj_default_isa" = "xmips3" -o "x$vrj_default_isa" = "xmips4" ]
   then
      vrj_isa_flags="-$vrj_default_isa"
   fi
fi

if [ "x$vrj_default_isa" = "xmips3" -o "x$vrj_default_isa" = "xmips4" ]; then
    vrj_isa_flags="-$vrj_default_isa"
else
    vrj_isa_flags=''
fi

prefix=@prefix@
exec_prefix=@exec_prefix@
prefix_set='no'
exec_prefix_set='no'
print_all='no'
use_linker='no'

usage()
{
    if test "x$2" != "x" ; then
       echo "Unrecognized option '$2'"
    fi

    cat <<EOF
Usage: vrjuggler-config [OPTIONS] [LIBRARIES]
Options:
        [--basedir]             Use \$VJ_BASE_DIR when printing paths
        [--prefix[=DIR]]        Print the installation prefix or set an
                                alternate prefix to use when printing paths
        [--exec-prefix[=DIR]]   Print the executable prefix or set an alternate
                                executable prefix to use when printing paths
        [--version]             Print the installed VR Juggler's version number
        [--cxxflags [N32|64]]   Print the flags for the VR Juggler-specific
                                C++ compiler
        [--libs [N32|64]]       Print the basic VR Juggler-specific libraries
        [--extra-libs [N32|64]] Print the extra linker options needed for
                                making an executable
        [--all]                 Print all the flags used for compiling or
                                linking (depending on other options)
        [--linker]              Print libraries as direct arguments to the
                                linker rather than to the compiler
        [--subsystem]           Print the VPR OS abstraction layer being used

Libraries (prints the linker options for one or more of these libraries):
        vrj (all basic libraries)
        Juggler
        Juggler_ogl
        Juggler_pf
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1 1>&2
fi

lib_Juggler=no
lib_Juggler_ogl=no
lib_Juggler_pf=no

while test $# -gt 0; do
    case "$1" in
        -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
        *) optarg= ;;
    esac

    case $1 in
        --all)
            print_all='yes'
            ;;
        --basedir)
            use_base_dir=yes
            ;;
        --prefix=*)
            prefix=$optarg
            prefix_set='yes'

            if test $exec_prefix_set = no ; then
                exec_prefix=$optarg
            fi
            ;;
        --prefix)
            echo_prefix=yes
            ;;
        --exec-prefix=*)
            exec_prefix=$optarg
            exec_prefix_set=yes
            ;;
        --exec-prefix)
            echo_exec_prefix=yes
            ;;
        --version)
            echo @MAJOR_VERSION@.@MINOR_VERSION@.@MICRO_VERSION@
            ;;
        --cxxflags)
            echo_cxxflags=yes
            case $2 in
                --*)
                    # This is another option flag, so leave it alone.
                    ;;
                N32)
                    vrj_extra_cxxflags="$vrj_extra_cxxflags $vrj_n32_flags $vrj_isa_flags"
                    shift
                    ;;
                64)
                    vrj_extra_cxxflags="$vrj_extra_cxxflags $vrj_64_flags $vrj_isa_flags"
                    shift
                    ;;
                *)
                    vrj_extra_cxxflags="$vrj_extra_cxxflags $vrj_abi_flags $vrj_isa_flags"
                    if [ "x$2" != "x" ] ; then
                        shift
                    fi
                    ;;
            esac
            ;;
        --subsystem)
            echo @VPR_SUBSYSTEM@
            ;;
        --libs)
            echo_libs=yes
            case $2 in
                --*)
                    # This is another option flag, so leave it alone.
                    ;;
                N32)
                    ldflags="$vrj_n32_flags $vrj_isa_flags"
                    LIBBITSUF='32'
                    shift
                    ;;
                64)
                    ldflags="$vrj_64_flags $vrj_isa_flags"
                    LIBBITSUF='64'
                    shift
                    ;;
                *)
                    ldflags="$vrj_abi_flags $vrj_isa_flags"
                    if [ "x$2" != "x" ] ; then
                        shift
                    fi
                    ;;
            esac
            ;;
        --extra-libs)
            echo_extra_libs=yes
            case $2 in
                --*)
                    # This is another option flag, so leave it alone.
                    ;;
                N32)
                    LIBBITSUF='32'
                    shift
                    ;;
                64)
                    LIBBITSUF='64'
                    shift
                    ;;
                *)
                    if [ "x$2" != "x" ] ; then
                        shift
                    fi
                    ;;
            esac
            ;;
        --linker)
            use_linker='yes'
            ;;
        --static)
            echo_static=yes
            ;;
        vrj)
            lib_Juggler_all=yes
            ;;
        Juggler)
            lib_Juggler=yes
            lib_Juggler_all=no
            ;;
        Juggler_ogl)
            lib_Juggler_ogl=yes
            lib_Juggler_all=no
            ;;
        Juggler_pf)
            lib_Juggler_pf=yes
            lib_Juggler_all=no
            ;;
        *)
            usage 1 1>&2
            ;;
    esac
    shift
done

if test "x$lib_Juggler_all" = "x" ; then
    lib_Juggler_all=yes
fi

# If we are using $VJ_BASE_DIR, overwrite $prefix and $exec_prefix unless they
# were set explicitly on the command line.
if test "$use_base_dir" = "yes" ; then
    if test "$prefix_set" = "no" ; then
        prefix="$VJ_BASE_DIR"
    fi

    if test "$exec_prefix_set" = "no" ; then
        exec_prefix="$VJ_BASE_DIR"
    fi
fi

if test "$echo_prefix" = "yes"; then
    echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
    echo $exec_prefix
fi

if test "$echo_cxxflags" = "yes"; then
    if test "x$print_all" = "xyes" ; then
        vrj_cxxflags_addtl="@vrj_cxxflags_all@"
    else
        vrj_cxxflags_addtl=''
    fi

    echo @vrj_cxxflags@ $vrj_cxxflags_addtl $vrj_extra_cxxflags -I$prefix/include $vrj_extra_includes
fi

if test "$echo_static" = "yes" ; then
    static_begin='@static_begin@'
    static_end='@static_end@'
fi

if test "$echo_libs" = "yes"; then
    if test "$use_base_dir" = "yes"; then
        ldflags="-L$VJ_BASE_DIR/lib$LIBBITSUF"
    else
        if test "$use_linker" = "yes" ; then
            ldflags="$ldflags @vrj_ldflags_linker@"
        else
            ldflags="$ldflags @vrj_ldflags_compiler@"
        fi
    fi

    if test "x$lib_Juggler_all" = "xyes" ; then
        vrj_libs="@vrj_libs@"
    else
        if test "x$lib_Juggler" = "xyes" ; then
            vrj_libs="$Juggler_lib"
        fi

        if test "x$lib_Juggler_ogl" = "xyes" ; then
            vrj_libs="$vrj_libs $Juggler_ogl_lib"
        fi

        if test "x$lib_Juggler_pf" = "xyes" ; then
            vrj_libs="$vrj_libs $Juggler_pf_lib"
        fi
    fi

    echo $ldflags $static_begin $vrj_libs $static_end
fi      

if test "x$echo_extra_libs" = "xyes"; then
    if test "x$print_all" = "xyes" ; then
        vrj_extra_libs_addtl="@vrj_extra_libs_juggler@"
    else
        vrj_extra_libs_addtl=''
    fi

    vrj_extra_ldflags="@vrj_extra_ldflags@"
    vrj_extra_libs="@vrj_extra_libs@"
    echo $vrj_extra_ldflags $vrj_extra_libs $vrj_extra_libs_addtl
fi
