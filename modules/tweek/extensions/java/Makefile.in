# -----------------------------------------------------------------------------
# Makefile.in for extensions/java.  It requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/make.defs.mk

beandir			= $(bindir)/beans
srcdir			= @srcdir@
top_srcdir		= @top_srcdir@
INSTALL			= @INSTALL@
INSTALL_FILES		=

# Java targets
JARS		= wizard.jar ui.jar
BEANS		= WizardBuilder

# List the packages for which JavaDoc documentation will be generated.
DOC_PKGS	= $(UI_PKG) \
		  $(UI_TREETABLE) \
		  $(WIZARD_PKG) \
		  $(WIZARD_BUILDER_PKG) \
		  $(WIZARD_PANES_PKG)
webroot		= $(HOME)/public_html/jugglerweb
instdir		= tweek/wizard/1.0
doc_prefix	= $(webroot)/$(instdir)
DOC_ROOT	= programmer.reference.java


_LOCAL_CLEAN=1
JAVA_AFTERBUILD=java_afterbuild

include $(MKPATH)/dpp.obj.mk

# -----------------------------------------------------------------------------
# Uses ant to build the java classes and JARs
# -----------------------------------------------------------------------------
java_afterbuild:
	@echo "------------------------------------------------"
	@echo "Building java sources"
	@echo "------------------------------------------------"
	$(ANT)

_clean:
	$(ANT) clean


# -----------------------------------------------------------------------------
# Extra targets
# -----------------------------------------------------------------------------
docs:
	$(JDK_HOME)/bin/javadoc -d $(DOC_ROOT) -sourcepath $(srcdir) \
          -classpath $(CLASSPATH) $(DOC_PKGS)

# This cannot be named 'install' because Doozer++ already defines that.
extensions-install:
	@echo "------------------------------------------------"
	@echo "Installing the Tweek extensions"
	@echo "------------------------------------------------"
ifneq ($(JARS), )
	for jar in $(JARS) ;						\
          do								\
              $(INSTALL) $(EXTRA_INSTALL_ARGS) -m $(FILE_PERMS)		\
              $(GROUP_OPT_UNIX) $(topdir)/extensions/java/$$jar $(bindir) ; \
          done
endif
ifneq ($(BEANS), )
	for bean in $(BEANS) ;						\
          do								\
              $(INSTALL) $(EXTRA_INSTALL_ARGS) -m $(FILE_PERMS)		\
                $(GROUP_OPT_UNIX) $(topdir)/extensions/java/$$bean.jar	\
                $(beandir) ;						\
              $(INSTALL) $(EXTRA_INSTALL_ARGS) -m $(FILE_PERMS)		\
                $(GROUP_OPT_UNIX)					\
                $(top_srcdir)/extensions/java/$$bean.xml $(beandir) ;	\
          done
endif

install-docs:
	$(MKINSTALLDIRS) $(doc_prefix)
	rm -rf $(doc_prefix)/$(DOC_ROOT)
	mv $(DOC_ROOT) $(doc_prefix)

ifdef GLOBAL_BUILD
    CLEAN_DIRS	+= $(top_srcdir)/bin
endif

include Makefile.inc
