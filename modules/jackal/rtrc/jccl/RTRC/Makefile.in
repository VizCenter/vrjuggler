			-I$(topdir)/rtrc

   SRCS+=		RTRCInterfaceSubjectImpl.cpp	\
			RTRCInterfaceSubject.cpp	\
			RTRCInterface.cpp
endif

EXTRA_INCLUDES+= \
	-I$(top_srcdir)/common \
	-I$(top_srcdir)/config \
	-I$(top_srcdir)/net \
	-I$(top_srcdir)/rtrc \
	-I$(topdir)/common

include $(MKPATH)/dpp.obj.mk

ifeq ($(HAVE_TWEEK_CXX), Y)
   ifneq ($(srcdir), $(IDL_GENDIR))
      INSTALL_FILES+=	$(IDL_GENDIR)/*.h
   endif

   INSTALL_FILES+=	$(srcdir)/*.idl
   CLEAN_FILES+=	$(addprefix $(IDL_GENDIR)/, $(IDL_CXX_FILES))
