INSTALL=	@INSTALL@
SUBOBJDIR=	$(JCCL_RTRC_LIBRARY)

HAVE_TWEEK_CXX=	@HAVE_TWEEK_CXX@

SRCS= \
	ConfigChunkHandler.cpp \
	ConfigManager.cpp \
	DepChecker.cpp \
	DependencyManager.cpp

ifeq ($(HAVE_TWEEK_CXX), Y)
   IDL_GENDIR=		.
   CXX_IDL_OPTS=	@TWEEK_CXX_IDL_OPTS@ @TWEEK_CXX_IDL_GENDIR_OPT@$(IDL_GENDIR)
