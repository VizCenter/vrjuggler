%{
%}

jccl_extra_cxxflags="@jccl_extra_cxxflags@"
jccl_libs="@jccl_libs@"
jccl_lib="@jccl_lib@"

jccl_extra_include_dirs="@jccl_extra_include_dirs@"

jccl_default_abi="@ABI@"
jccl_default_isa="@ISA@"
jccl_n32_flags="@jccl_n32_flags@"
jccl_64_flags="@jccl_64_flags@"
LIBBITSUF='@LIBBITSUF@'

USE_GCC='@USE_GCC@'

if [ "x$jccl_default_abi" = "xN32" ]; then
    jccl_abi_flags="$jccl_n32_flags"
elif [ "x$jccl_default_abi" = "x64" ]; then
    jccl_abi_flags="$jccl_64_flags"
else
    jccl_abi_flags=''
fi

if [ "x$USE_GCC" != "xyes" ]; then
   if [ "x$jccl_default_isa" = "xmips3" -o "x$jccl_default_isa" = "xmips4" ]
   then
      jccl_isa_flags="-$jccl_default_isa"
   fi
fi

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set='no'
print_all='no'
use_linker='no'

usage()
{
    cat <<EOF
Usage: jccl-config [OPTIONS] [LIBRARIES]
Options:
        [--basedir]             Use \$JCCL_BASE_DIR when printing paths
        [--prefix[=DIR]]        Print the installation prefix or set an
                                alternate prefix to use when printing paths
        [--exec-prefix[=DIR]]   Print the executable prefix or set an
                                alternate executable prefix to use when
                                printing paths
        [--version]             Print the installed JCCL's version number
        [--cxxflags [N32|64]]   Print the JCCL-specific flags for the C++
                                compiler
        [--libs [N32|64]]       Print the basic JCCL-specific libraries
        [--extra-libs [N32|64]] Print the extra linker options needed for
                                making an executable
        [--all]                 Print all the flags used for compiling or
                                linking (depending on other options)
        [--linker]              Print libraries as direct arguments to the
                                linker rather than to the compiler
        [--subsystem]           Print the OS abstraction layer being used
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1 1>&2
fi

while test $# -gt 0; do
    case "$1" in
        -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
        *) optarg= ;;
    esac

    case $1 in
        --all)
            print_all='yes'
            ;;
        --basedir)
            use_base_dir=yes
            ;;
        --prefix=*)
            prefix=$optarg
            if test $exec_prefix_set = no ; then
                exec_prefix=$optarg
            fi
            ;;
        --prefix)
            echo_prefix=yes
            ;;
        --exec-prefix=*)
            exec_prefix=$optarg
            exec_prefix_set=yes
            ;;
        --exec-prefix)
            echo_exec_prefix=yes
            ;;
        --version)
            echo @MAJOR_VERSION@.@MINOR_VERSION@.@MICRO_VERSION@
            ;;
        --cxxflags)
            echo_cxxflags=yes
            case $2 in
                --*)
                    # This is another option flag, so leave it alone.
                    ;;
                N32)
                    jccl_extra_cxxflags="$jccl_extra_cxxflags $jccl_n32_flags $jccl_isa_flags"
                    shift
                    ;;
                64)
                    jccl_extra_cxxflags="$jccl_extra_cxxflags $jccl_64_flags $jccl_isa_flags"
                    shift
                    ;;
                *)
                    jccl_extra_cxxflags="$jccl_extra_cxxflags $jccl_abi_flags $jccl_isa_flags"
                    if [ "x$2" != "x" ] ; then
                        shift
                    fi
                    ;;
            esac
            ;;
        --subsystem)
            echo @SUBSYSTEM@
            ;;
        --libs)
            echo_libs=yes
            case $2 in
                --*)
                    # This is another option flag, so leave it alone.
                    ;;
                N32)
                    ldflags="$jccl_n32_flags $jccl_isa_flags"
                    LIBBITSUF='32'
                    shift
                    ;;
                64)
                    ldflags="$jccl_64_flags $jccl_isa_flags"
                    LIBBITSUF='64'
                    shift
                    ;;
                *)
                    ldflags="$jccl_abi_flags $jccl_isa_flags"
                    if [ "x$2" != "x" ] ; then
                        shift
                    fi
                    ;;
            esac
            ;;
        --extra-libs)
            echo_extra_libs=yes
            case $2 in
                --*)
                    # This is another option flag, so leave it alone.
                    ;;
                N32)
                    LIBBITSUF='32'
                    shift
                    ;;
                64)
                    LIBBITSUF='64'
                    shift
                    ;;
                *)
                    if [ "x$2" != "x" ] ; then
                        shift
                    fi
                    ;;
            esac
            ;;
        --linker)
            use_linker=yes
            ;;
        --static)
            echo_static=yes
            ;;
        *)
            usage 1 1>&2
            ;;
    esac
    shift
done

if test "$echo_prefix" = "yes"; then
    if test "$use_base_dir" = "yes"; then
        echo $JCCL_BASE_DIR
    else
        echo $prefix
    fi
fi

if test "$echo_exec_prefix" = "yes"; then
    if test "$use_base_dir" = "yes"; then
        echo $JCCL_BASE_DIR
    else
        echo $exec_prefix
    fi
fi

if test "$echo_cxxflags" = "yes"; then
    if test "x$print_all" = "xyes" ; then
        jccl_cxxflags_addtl="@jccl_cxxflags_all@"
    else
        jccl_cxxflags_addtl=''
    fi

    if test "$use_base_dir" = "yes"; then
        echo @jccl_cxxflags@ $jccl_cxxflags_addtl $jccl_extra_cxxflags -I$JCCL_BASE_DIR/include
    else
        echo @jccl_cxxflags@ $jccl_cxxflags_addtl $jccl_extra_cxxflags -I@includedir@
    fi
fi

if test "$echo_static" = "yes" ; then
    static_begin='@static_begin@'
    static_end='@static_end@'
fi

if test "$echo_libs" = "yes"; then
    if test "$use_base_dir" = "yes"; then
        ldflags="$ldflags -L$JCCL_BASE_DIR/lib$LIBBITSUF"
    else
        if test "$use_linker" = "yes" ; then
            ldflags="$ldflags @jccl_ldflags_linker@"
        else
            ldflags="$ldflags @jccl_ldflags_compiler@"
        fi
    fi

    echo $ldflags $static_begin $jccl_libs $static_end 
fi      

if test "x$echo_extra_libs" = "xyes"; then
    if test "x$print_all" = "xyes" ; then
        jccl_extra_libs_addtl="@jccl_extra_libs_juggler@"
    else
        jccl_extra_libs_addtl=''
    fi

    jccl_extra_ldflags="@jccl_extra_ldflags@"
    jccl_extra_libs="@jccl_extra_libs@"
    echo $jccl_extra_ldflags $jccl_extra_libs $jccl_extra_libs_addtl 
fi
