# -----------------------------------------------------------------------------
# C++-related setup
# Just recurse to the sub directories and then link to a static library.
# -----------------------------------------------------------------------------
STATICLIB_EXT=	@STATICLIB_EXT@
DYNAMICLIB_EXT=	@DYNAMICLIB_EXT@

#LIBS=		$(JCCL_PERFMONITOR_LIBRARY)
#STATIC_LIBS=	$(LIBS)
#DYNAMIC_LIBS=	$(LIBS)

JCCL_PERFMONITOR_LIB_STATIC=		$(JCCL_PERFMONITOR_LIBRARY).$(STATICLIB_EXT)
JCCL_PERFMONITOR_LIB_DYNAMIC=		$(JCCL_PERFMONITOR_LIBRARY).$(DYNAMICLIB_EXT)
JCCL_PERFMONITOR_PROF_LIB_STATIC=	$(JCCL_PERFMONITOR_LIBRARY)$(PROFLIB_EXT).$(STATICLIB_EXT)
JCCL_PERFMONITOR_PROF_LIB_DYNAMIC=	$(JCCL_PERFMONITOR_LIBRARY)$(PROFLIB_EXT).$(DYNAMICLIB_EXT)


include $(MKPATH)/dpp.libs-basic.mk
include $(MKPATH)/dpp.obj-common.mk

# -----------------------------------------------------------------------------
# Recursive make setup
# -----------------------------------------------------------------------------
DIRPRFX=	perfmonitor/
SUBDIR=		jccl
$(RECTARGET): recursive
include $(MKPATH)/dpp.subdir.mk

# -----------------------------------------------
# Construct the static version of the libraries.
# -----------------------------------------------
$(LIBDIR)/$(JCCL_PERFMONITOR_LIB_STATIC) $(LIBDIR)/$(JCCL_PERFMONITOR_PROF_LIB_STATIC): $(OBJDIR)/*.$(OBJEXT)
ifneq (@OS_TYPE@, Win32)
	@echo "------------------------------------------------"
	@echo "Creating $@"
	@echo "------------------------------------------------"
	@$(SHELL) $(MKINSTALLDIRS) $(LIBDIR)
	$(AR) $(AR_NAME_FLAG)$@ $(OBJDIR)/*.$(OBJEXT)
	$(RANLIB) $@
	cd $(LIBDIR_BASE) && rm -f $(notdir $@) && $(LN_S) $@ ./
	cd $(OBJDIR) && rm -rf ii_files
	@echo "------------------------------------------------"
	@echo "$@ done"
	@echo "------------------------------------------------"
endif

# ------------------------------------------------
# Construct the dynamic version of the libraries.
# ------------------------------------------------
$(LIBDIR)/$(JCCL_PERFMONITOR_LIB_DYNAMIC) $(LIBDIR)/$(JCCL_PERFMONITOR_PROF_LIB_DYNAMIC): $(OBJDIR)/*.$(OBJEXT)
	@echo "------------------------------------------------"
	@echo "Creating $@"
	@echo "------------------------------------------------"
	@$(SHELL) $(MKINSTALLDIRS) $(LIBDIR)
	$(LD) $(LDOPTS) $(DYLIB_NAME_FLAG) $(OBJDIR)/*.$(OBJEXT) $(DYLIB_DEPS)
	cd $(LIBDIR_BASE) && rm -f $(notdir $@) && $(LN_S) $@ ./
	cd $(OBJDIR) && rm -rf ii_files
	@echo "------------------------------------------------"
	@echo "$@ done"
	@echo "------------------------------------------------"


