# -----------------------------------------------------------------------------
# Makefile.in for vjcontrol.  It requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# This is a hack to deal with GNU make's ignorance about defined targets.
# Without this, the 'default' set in dpp.subdir.mk becomes the default
# target, and that's not what we want.
DEFAULT_SET	= 1

# Include common definitions.
include @topdir@/make.defs.mk

STARTTIME := $(shell LC_TIME=C date)

BUILD_PROF_C	= @BUILD_PROF_C@
BUILD_PROF_CXX	= @BUILD_PROF_CXX@

# If we can build both C and C++ profiled objects, we will build profiled
# libraries.
ifeq ($(BUILD_PROF_C), Y)
ifeq ($(BUILD_PROF_CXX), Y)
    BUILD_PROF_LIBS	= 1
endif
endif

srcdir					= @srcdir@
top_srcdir				= @top_srcdir@
EXTRA_JAVA_SRCS_PATH	= $(srcdir)
INSTALL					= @INSTALL@
INSTALL_FILES			=


# -----------------------------------------------------------------------------
# Java-related setup
# -----------------------------------------------------------------------------
JDOM_JAR	= @JDOM_JAR@
CLASSPATH	= $(JDOM_JAR)$(JCPS)$(topdir)/config$(JCPS)$(topdir)/editorgui$(JCPS)$(topdir)/net
JAVA_SRC_PATH	= $(top_srcdir)/editorgui

VJCONTROL_PKG		= org.vrjuggler.jccl.vjcontrol
VJCONTROL_DIR		= $(subst .,/,$(VJCONTROL_PKG))
VJCONTROL_SRCS		= $(patsubst $(srcdir)/%,%,$(wildcard $(srcdir)/$(VJCONTROL_DIR)/*.java))
VJCONTROL_CLASSES = $(VJCONTROL_SRCS:.java=.class)

VJCONTROL_UI_PKG		= org.vrjuggler.jccl.vjcontrol.ui
VJCONTROL_UI_DIR		= $(subst .,/,$(VJCONTROL_UI_PKG))
VJCONTROL_UI_SRCS		= $(patsubst $(srcdir)/%,%,$(wildcard $(srcdir)/$(VJCONTROL_UI_DIR)/*.java))
VJCONTROL_UI_CLASSES = $(VJCONTROL_UI_SRCS:.java=.class)

VJCONTROL_UI_WIDGETS_PKG		= org.vrjuggler.jccl.vjcontrol.ui.widgets
VJCONTROL_UI_WIDGETS_DIR		= $(subst .,/,$(VJCONTROL_UI_WIDGETS_PKG))
VJCONTROL_UI_WIDGETS_SRCS		= $(patsubst $(srcdir)/%,%,$(wildcard $(srcdir)/$(VJCONTROL_UI_WIDGETS_DIR)/*.java))
VJCONTROL_UI_WIDGETS_CLASSES	= $(VJCONTROL_UI_WIDGETS_SRCS:.java=.class)

WIZARDS_PKG			= org.vrjuggler.jccl.wizards
WIZARDS_DIR			= $(subst .,/,$(WIZARDS_PKG))
WIZARDS_SRCS		= $(patsubst $(srcdir)/%,%,$(wildcard $(srcdir)/$(WIZARDS_DIR)/*.java))
WIZARDS_CLASSES	= $(WIZARDS_SRCS:.java=.class)

JAVA_SRCS 		= $(VJCONTROL_SRCS) $(VJCONTROL_UI_SRCS) $(VJCONTROL_UI_WIDGETS_SRCS) $(WIZARDS_SRCS)
JAVA_CLASSES	= $(VJCONTROL_CLASSES) $(VJCONTROL_UI_CLASSES) $(VJCONTROL_UI_WIDGETS_CLASSES) $(WIZARDS_CLASSES)
JARS		 		= jccl_vjcontrol.jar

# List the packages for which JavaDoc documentation will be generated.
DOC_PKGS		= $(VJCONTROL_PKG) $(VJCONTROL_UI_PKG) $(VJCONTROL_UI_WIDGETS_PKG) $(WIZARDS_PKG)
webroot		= $(HOME)/public_html/jugglerweb
instdir		= jccl/vjcontrol/1.0
doc_prefix	= $(webroot)/$(instdir)
DOC_ROOT		= programmer.reference.java

JAVA_AFTERBUILD = jars

# Hack to get java to compile the classes into the current dir
override BASE_OBJDIR=
override OBJDIR=.

include $(MKPATH)/dpp.obj.mk

# -----------------------------------------------------------------------------
# Extra targets.
# -----------------------------------------------------------------------------
jars: $(JARS)
ifdef GLOBAL_BUILD
	@$(MKINSTALLDIRS) $(top_srcdir)/bin
	cp $(JARS) $(top_srcdir)/bin
endif

jccl_vjcontrol.jar: $(JAVA_CLASSES)
	$(JAR) cvf $@ \
			$(VJCONTROL_DIR)/*.class \
			$(VJCONTROL_UI_DIR)/*.class \
			$(VJCONTROL_UI_WIDGETS_DIR)/*.class \
			$(WIZARDS_DIR)/*.class \
			-C $(JCCLROOT_ABS)/vjcontrol $(WIZARDS_DIR)/gfx \
			-C $(JCCLROOT_ABS)/vjcontrol $(WIZARDS_DIR)/data \
			-C $(JCCLROOT_ABS)/vjcontrol VjFiles \
			-C $(JCCLROOT_ABS)/vjcontrol contents.config

docs:
	$(JDK_HOME)/bin/javadoc -d $(DOC_ROOT) -sourcepath $(srcdir)	\
          -classpath $(CLASSPATH) $(DOC_PKGS)

# This cannot be named 'install' because Doozer++ already defines that.
vjcontrol-install:
	@echo "------------------------------------------------"
	@echo "Installing the JCCL vjcontrol Java code base"
	@echo "------------------------------------------------"
	for jar in $(JARS) ; \
          do \
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX) \
                $(topdir)/vjcontrol/$$jar $(bindir) ; \
          done
	for jar in `echo "$(JDOM_JAR)" | sed -e 's/$(JCPS)/ /g'` ; \
          do \
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX) \
                $$jar $(bindir) ; \
          done

install-docs:
	$(MKINSTALLDIRS) $(doc_prefix)
	rm -rf $(doc_prefix)/$(DOC_ROOT)
	mv $(DOC_ROOT) $(doc_prefix)

CLEAN_FILES	+= $(JARS) $(JAVA_CLASSES)

ifdef GLOBAL_BUILD
    CLEAN_DIRS	+= $(top_srcdir)/bin
endif

include Makefile.inc
