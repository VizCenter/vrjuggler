BUILD_JAVA	= @BUILD_JAVA@

vjcontrol-java:
ifndef NO_JAVA
ifeq ($(BUILD_JAVA), Y)
	@echo "------------------------------------------------"
	@echo "Building Java code for the JCCL vjcontrol"
	@echo "------------------------------------------------"
	@$(MAKE) java
else
	@echo "------------------------------------------------"
	@echo "JCCL vjcontrol build skipped"
	@echo "------------------------------------------------"
endif
endif	# ifndef NO_JAVA

# Build the JAR files for the Tweek GUI.
vjcontrol-jar:
ifndef NO_JAVA
ifeq ($(BUILD_JAVA), Y)
	@$(MAKE) jars
else
	@echo "------------------------------------------------"
	@echo "JCCL vjcontrol JAR file creation skipped"
	@echo "------------------------------------------------"
endif
endif	# ifndef NO_JAVA

vjcontrol-pkg-links:
	@$(MAKE) instlinks="$(instlinks)" links

java-install:
	@$(MAKE) vjcontrol-install

links:
ifndef NO_JAVA
ifeq ($(BUILD_JAVA), Y)
	cd $(instlinks)/bin && \
		for jar in $(JARS); do \
			$(RM_LN) ./$$jar && $(LN_S) $(topdir)/vjcontrol/$$jar ./$$jar; \
		done
	cd $(instlinks)/bin && rm -f ./vjcontrol && \
		sed -e 's,#JCCL_SHARE_DIR#,${JCCL_SHARE_DIR},g' \
			 -e 's,#JDOM_JAR#,${JDOM_JAR},g' \
			$(JCCLROOT_ABS)/vjcontrol/vjcontrol.sh > vjcontrol && \
		chmod $(EXEC_PERMS) vjcontrol
endif
endif
