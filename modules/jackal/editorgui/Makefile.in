# -----------------------------------------------------------------------------
# Makefile.in for editorgui.  It requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# This is a hack to deal with GNU make's ignorance about defined targets.
# Without this, the 'default' set in dpp.subdir.mk becomes the default
# target, and that's not what we want.
DEFAULT_SET	= 1

# Include common definitions.
include @topdir@/make.defs.mk

STARTTIME := $(shell LC_TIME=C date)

BUILD_PROF_C	= @BUILD_PROF_C@
BUILD_PROF_CXX	= @BUILD_PROF_CXX@

# If we can build both C and C++ profiled objects, we will build profiled
# libraries.
ifeq ($(BUILD_PROF_C), Y)
ifeq ($(BUILD_PROF_CXX), Y)
    BUILD_PROF_LIBS	= 1
endif
endif

srcdir					= @srcdir@
top_srcdir				= @top_srcdir@
EXTRA_JAVA_SRCS_PATH	= $(srcdir)
INSTALL					= @INSTALL@
INSTALL_FILES			=


# -----------------------------------------------------------------------------
# Java-related setup
# -----------------------------------------------------------------------------
JDOM_JAR	= @JDOM_JAR@
CLASSPATH	= $(JDOM_JAR)$(JCPS)$(topdir)/config$(JCPS)$(topdir)/vjcontrol$(JCPS)$(topdir)/net
JAVA_SRC_PATH = $(top_srcdir)/vjcontrol

EDITORGUI_PKG		= org.vrjuggler.jccl.editorgui
EDITORGUI_DIR		= $(subst .,/,$(EDITORGUI_PKG))
EDITORGUI_SRCS		= $(patsubst $(srcdir)/%,%,$(wildcard $(srcdir)/$(EDITORGUI_DIR)/*.java))
EDITORGUI_CLASSES = $(EDITORGUI_SRCS:.java=.class)

CHUNKDESCUI_PKG		= org.vrjuggler.jccl.editorgui.chunkdescui
CHUNKDESCUI_DIR		= $(subst .,/,$(CHUNKDESCUI_PKG))
CHUNKDESCUI_SRCS		= $(patsubst $(srcdir)/%,%,$(wildcard $(srcdir)/$(CHUNKDESCUI_DIR)/*.java))
CHUNKDESCUI_CLASSES = $(CHUNKDESCUI_SRCS:.java=.class)

CONFIGCHUNKUI_PKG		= org.vrjuggler.jccl.editorgui.configchunkui
CONFIGCHUNKUI_DIR		= $(subst .,/,$(CONFIGCHUNKUI_PKG))
CONFIGCHUNKUI_SRCS		= $(patsubst $(srcdir)/%,%,$(wildcard $(srcdir)/$(CONFIGCHUNKUI_DIR)/*.java))
CONFIGCHUNKUI_CLASSES	= $(CONFIGCHUNKUI_SRCS:.java=.class)

JAVA_SRCS 		= $(EDITORGUI_SRCS) $(CHUNKDESCUI_SRCS) $(CONFIGCHUNKUI_SRCS)
JAVA_CLASSES	= $(EDITORGUI_CLASSES) $(CHUNKDESCUI_CLASSES) $(CONFIGCHUNKUI_CLASSES)
JARS		 		= jccl_editorgui.jar

# List the packages for which JavaDoc documentation will be generated.
DOC_PKGS		= $(EDITORGUI_PKG) $(CHUNKDESCUI_PKG) $(CONFIGCHUNKUI_PKG)
webroot		= $(HOME)/public_html/jugglerweb
instdir		= jccl/editorgui/1.0
doc_prefix	= $(webroot)/$(instdir)
DOC_ROOT		= programmer.reference.java

JAVA_AFTERBUILD = jars

include $(MKPATH)/dpp.obj.mk

# Hack to get java to compile the classes into the current dir
override OBJDIR=.

# -----------------------------------------------------------------------------
# Extra targets.
# -----------------------------------------------------------------------------
jars: $(JARS)
ifdef GLOBAL_BUILD
	@$(MKINSTALLDIRS) $(top_srcdir)/bin
	cp $(JARS) $(top_srcdir)/bin
endif

jccl_editorgui.jar: $(JAVA_CLASSES)
	$(JAR) cvf $@ \
			$(EDITORGUI_DIR)/*.class \
			$(CHUNKDESCUI_DIR)/*.class \
			$(CONFIGCHUNKUI_DIR)/*.class

docs:
	$(JDK_HOME)/bin/javadoc -d $(DOC_ROOT) -sourcepath $(srcdir)	\
          -classpath $(CLASSPATH) $(DOC_PKGS)

# This cannot be named 'install' because Doozer++ already defines that.
editorgui-install:
	@echo "------------------------------------------------"
	@echo "Installing the JCCL vjcontrol Java code base"
	@echo "------------------------------------------------"
	for jar in $(JARS) ; \
          do \
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX) \
                $(topdir)/vjcontrol/$$jar $(bindir) ; \
          done

install-docs:
	$(MKINSTALLDIRS) $(doc_prefix)
	rm -rf $(doc_prefix)/$(DOC_ROOT)
	mv $(DOC_ROOT) $(doc_prefix)

CLEAN_FILES	+= $(JARS) $(JAVA_CLASSES)

ifdef GLOBAL_BUILD
    CLEAN_DIRS	+= $(top_srcdir)/bin
endif

include Makefile.inc
