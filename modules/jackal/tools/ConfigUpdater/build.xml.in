<?xml version="1.0" encoding="UTF-8"?>
<project name="ConfigUpdater" default="dist" basedir=".">
   <property name="srcdir" location="@srcdir@" />
   <property name="debug" value="on" />
   <property name="optimize" value="off" />

   <path id="tweek.classpath">
      <pathelement path="@TWEEK_JARS@" />
   </path>

   <!-- Compile all java sources -->
   <target name="compile">
      <javac destdir="."
             deprecation="on"
             debug="${debug}"
             optimize="${optimize}">
         <src path="${srcdir}/src" />
         <include name="ConfigUpdater/**" />
         <include name="VjConfig/**" />
         <classpath refid="tweek.classpath" />
      </javac>
   </target>

   <!-- Create the distribution jar -->
   <target name="dist" depends="compile">
      <jar destfile="ConfigUpdater.jar" basedir=".">
         <include name="ConfigUpdater/**" />
         <include name="VjConfig/**" />
         <fileset dir="${srcdir}"
                  includes="ConfigUpdater.desc" />
      </jar>
   </target>

   <!-- Clean up -->
   <target name="clean">
      <delete failonerror="false">
         <fileset dir="VjConfig" includes="**/*.class" />
      </delete>
      <delete dir="ConfigUpdater" failonerror="false" />
      <delete file="ConfigUpdater.jar" failonerror="false" />
   </target>
</project>
