# -----------------------------------------------------------------------------
# Makefile.in for jackal/tools/ConfigUpdater.  It requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------
default: java

# Include common definitions.
include @topdir@/make.defs.mk

srcdir=		@srcdir@
top_srcdir=	@top_srcdir@
INSTALL=	@INSTALL@

_LOCAL_CLEAN=1
JAVA_AFTERBUILD=java_afterbuild

include $(MKPATH)/dpp.obj.mk

# -----------------------------------------------------------------------------
# Uses ant to build the java classes and JARs
# -----------------------------------------------------------------------------
java_afterbuild:
	@echo "------------------------------------------------"
	@echo "Building java sources"
	@echo "------------------------------------------------"
	$(ANT)

_clean:
	$(ANT) clean

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
configupdater-install:
	@echo "------------------------------------------------"
	@echo "Installing the ConfigUpdater tool"
	@echo "------------------------------------------------"
	$(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX) \
		$(EXTRA_INSTALL_ARGS) $(topdir)/tools/ConfigUpdater/ConfigUpdater.jar \
		$(bindir) || exit 1
