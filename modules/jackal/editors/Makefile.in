# -----------------------------------------------------------------------------
# Makefile.in for editors.  It requires GNU make.
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# This is a hack to deal with GNU make's ignorance about defined targets.
# Without this, the 'default' set in dpp.subdir.mk becomes the default
# target, and that's not what we want.
DEFAULT_SET=	1

# Include common definitions.
include @topdir@/make.defs.mk

STARTTIME:=	$(shell LC_TIME=C date)

BUILD_PROF_C=	@BUILD_PROF_C@
BUILD_PROF_CXX=	@BUILD_PROF_CXX@

# If we can build both C and C++ profiled objects, we will build profiled
# libraries.
ifeq ($(BUILD_PROF_C), Y)
ifeq ($(BUILD_PROF_CXX), Y)
   BUILD_PROF_LIBS=	1
endif
endif

beandir=		$(bindir)/beans
srcdir=			@srcdir@
top_srcdir=		@top_srcdir@
EXTRA_JAVA_SRCS_PATH=	$(srcdir)
INSTALL=		@INSTALL@
INSTALL_FILES=		


# -----------------------------------------------------------------------------
# Java-related setup
# -----------------------------------------------------------------------------
JDOM_JAR=	@JDOM_JAR@
TWEEK_JARS=	@TWEEK_JARS@
TWEEK_EXT_JARS=	@TWEEK_EXT_JARS@
CLASSPATH=	$(JDOM_JAR)$(JCPS)$(TWEEK_JARS)$(JCPS)$(TWEEK_EXT_JARS)$(JCPS)$(topdir)/config
JAVA_SRC_PATH=	

EDITORS_PKG=		org.vrjuggler.jccl.editors
EDITORS_DIR=		$(subst .,/,$(EDITORS_PKG))
EDITORS_SRCS=		$(patsubst $(srcdir)/%,%,$(wildcard $(srcdir)/$(EDITORS_DIR)/*.java))
EDITORS_CLASSES=	$(EDITORS_SRCS:.java=.class)

JAVA_SRCS=		$(EDITORS_SRCS)
JAVA_CLASSES=		$(EDITORS_CLASSES)
JARS=			
BEANS=			jccl_editors

# List the packages for which JavaDoc documentation will be generated.
DOC_PKGS=	$(EDITORS_PKG)
webroot=	$(HOME)/public_html/jugglerweb
instdir=	jccl/editors/1.0
doc_prefix=	$(webroot)/$(instdir)
DOC_ROOT=	programmer.reference.java

JAVA_AFTERBUILD=	jars

override OBJDIR=.
include $(MKPATH)/dpp.obj.mk

# Hack to get java to compile the classes into the current dir
override OBJDIR=.

# -----------------------------------------------------------------------------
# Extra targets.
# -----------------------------------------------------------------------------
jars: $(JARS) $(addsuffix .jar, $(BEANS))

jccl_editors.jar: $(JAVA_CLASSES)
	$(JAR) cvf $@ $(EDITORS_DIR)/*.class
	cd $(srcdir) && $(JAR) uvf $(topdir)/editors/$@ \
		$(EDITORS_DIR)/images/*.gif

docs:
	$(JDK_HOME)/bin/javadoc -d $(DOC_ROOT) -sourcepath $(srcdir)	\
          -classpath $(CLASSPATH) $(DOC_PKGS)

# This cannot be named 'install' because Doozer++ already defines that.
editors-install:
	@echo "------------------------------------------------"
	@echo "Installing the JCCL vjcontrol Java code base"
	@echo "------------------------------------------------"
ifneq ($(JARS), )
	for jar in $(JARS) ; \
          do \
              $(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX) \
                $(EXTRA_INSTALL_ARGS) $(topdir)/vjcontrol/$$jar $(bindir) \
                  || exit 1; \
          done
endif
ifneq ($(BEANS), )
	for bean in $(BEANS) ; \
	  do \
		$(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX) \
		  $(EXTRA_INSTALL_ARGS) $(top_srcdir)/editors/$$bean.xml \
                  $(beandir) || exit 1; \
	  	$(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT_UNIX) \
		  $(EXTRA_INSTALL_ARSGS) $(topdir)/editors/$$bean.jar \
                  $(beandir) || exit 1; \
	  done
endif

install-docs:
	$(MKINSTALLDIRS) $(doc_prefix)
	rm -rf $(doc_prefix)/$(DOC_ROOT)
	mv $(DOC_ROOT) $(doc_prefix)

CLEAN_FILES+=	$(JARS) $(addsuffix .jar, $(BEANS)) $(JAVA_CLASSES)

ifdef GLOBAL_BUILD
   CLEAN_DIRS+=	$(top_srcdir)/bin
endif

include Makefile.inc
