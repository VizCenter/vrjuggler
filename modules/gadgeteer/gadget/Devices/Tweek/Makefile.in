default: all

# Include common definitions.
include @topdir@/make.defs.mk

DRIVER_NAME=		TweekGadget

includedir=		@includedir@/gadget/Devices/Tweek
srcdir=			@srcdir@
top_srcdir=		@top_srcdir@
EXTRA_INCLUDES+=	-I$(srcdir)
EXTRA_SRCS_PATH=	$(srcdir)/idl gadget
INSTALL=		@INSTALL@
INSTALL_FILES=
SUBOBJDIR=		$(DRIVER_NAME)

HAVE_TWEEK_CXX=		@HAVE_TWEEK_CXX@
HAVE_TWEEK_JAVA=	@HAVE_TWEEK_JAVA@

ifeq ($(HAVE_TWEEK_CXX), Y)
   EXTRA_CXXFLAGS+=	@TWEEK_CXXFLAGS@
   INSTALL_FILES=	$(IDL_GENDIR)/*.h

   IDL_CXX_FILES=	TweekAnalogSubject.cpp TweekAnalogSubject.h	\
			TweekDigitalSubject.cpp TweekDigitalSubject.h	\
			TweekPositionSubject.cpp TweekPositionSubject.h

   SRCS=		TweekAnalogSubject.cpp		\
			TweekAnalogSubjectImpl.cpp	\
			TweekDigitalSubject.cpp		\
			TweekDigitalSubjectImpl.cpp	\
			TweekPositionSubject.cpp	\
			TweekPositionSubjectImpl.cpp	\
			TweekGadget.cpp

   C_AFTERBUILD=	driver-dso
endif

ifeq ($(HAVE_TWEEK_JAVA), Y)
   EXTRA_JAVA_SRCS_PATH=gadget

   IDL_JAVA_FILES=	TweekAnalogSubject.java		\
			TweekDigitalSubject.java	\
			TweekPositionSubject.java

   JARS=		TweekGadget.jar
   POST_INSTALL=	install-bean
   BEAN_INSTALL_FILES=	$(JARS) $(addprefix $(srcdir)/, $(JARS:.jar=.xml))
   BEAN_INSTALL_PATH=	$(bindir)/beans

   AFTERBUILD=		java-build
endif

BEFOREBUILD=		idl-beforebuild

idl-beforebuild:
ifeq ($(HAVE_TWEEK_CXX), Y)
	$(MAKE) DO_IDL=1 cxx_idl
endif
ifeq ($(HAVE_TWEEK_JAVA), Y)
	$(MAKE) DO_IDL=1 java_idl
endif

java-build:
	$(ANT)

install-bean:
	$(INSTALL) -m $(FILE_PERMS) $(GROUP_OPT) $(EXTRA_INSTALL_ARGS)	\
          $(BEAN_INSTALL_FILES) $(BEAN_INSTALL_PATH)

_LOCAL_CLEAN=	_clean

include Makefile.inc
include $(MKPATH)/dpp.obj.mk
include @topdir@/gadget/Devices/driver.defs.mk

PRE_DSO_DRIVER_DEPS=	@TWEEK_DRIVER_DEPS@

ifeq ($(HAVE_TWEEK_CXX), Y)
   CLEAN_FILES+=	$(IDL_CXX_FILES)
endif

_clean:
	$(ANT) clean

# -----------------------------------------------------------------------------
# Include dependencies generated automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
ifndef DO_IDL
   -include $(DEPEND_FILES)
endif
endif
