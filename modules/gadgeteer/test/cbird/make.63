#
# UNCOMMENT the OS macro for the correct Operating System
#
#OS      = COHERENT
OS      = IRIX
#OS      = SUNOS
#OS      = AIX
#OS      = ULTRIX

CFLAGS  = -DKNR -D_OLD_TERMIOS -Xcpluscomm -D$(OS)
CC      = cc

cbird:        birdcmds.o birdmain.o cmdutil.o menu.o rstofbb.o serknr.o
	$(CC) birdcmds.o birdmain.o cmdutil.o menu.o rstofbb.o serknr.o -lm -o cbird

birdcmds.o:   birdcmds.c asctech.h compiler.h serial.h rstofbb.h birdcmds.h
	$(CC) -c $(CFLAGS) birdcmds.c

birdmain.o:   birdmain.c asctech.h compiler.h serial.h rstofbb.h birdmain.h
	$(CC) -c $(CFLAGS) birdmain.c

cmdutil.o:    cmdutil.c asctech.h compiler.h serial.h cmdutil.h
	$(CC) -c $(CFLAGS) cmdutil.c

menu.o:       menu.c asctech.h compiler.h menu.h
	$(CC) -c $(CFLAGS) menu.c

rstofbb.o:    rstofbb.c asctech.h compiler.h menu.h rstofbb.h
	$(CC) -c $(CFLAGS) rstofbb.c

serknr.o:     serknr.c asctech.h compiler.h serial.h
	$(CC) -c $(CFLAGS) serknr.c
