# project name...
PROJECT_NAME = sample

OBJECTS		= main.@OBJEXT@
APP_INCLUDES	= @sample_application_includes@
APP_LIBS		= @snx_extra_ldflags@ @snx_extra_libs@ @sample_application_libs@
APP_LDFLAGS       = @sample_application_ldflags@
VPATH		= @srcdir@

#########################################################################
.SUFFIXES: .cpp .@OBJEXT@

srcdir		= @srcdir@

COMPILE		= @CXX@ @DEFS@ @CPPFLAGS@ @CXXFLAGS@ @snx_extra_cxxflags@ @DBG_FLAGS@ 
LINK		= @CXX@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_LINK_FLAGS@


# -----------------------------------------------------------------------------
# Targets.
# -----------------------------------------------------------------------------
default: all

all: sample@EXEEXT@

sample@EXEEXT@: $(OBJECTS)
	$(LINK) @EXE_NAME_FLAG@ $(OBJECTS) $(APP_LDFLAGS) $(APP_LIBS)

.cpp.@OBJEXT@:
	$(COMPILE) $(APP_INCLUDES) @OBJ_BUILD_FLAG@ @OBJ_NAME_FLAG@ $<
	
# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
clean:
	rm -rf Makedepend sample@EXEEXT@ sample.ilk ii_files $(OBJECTS) *core \
          so_locations *.?db

clobber: clean
	rm -rf ./ii_files

