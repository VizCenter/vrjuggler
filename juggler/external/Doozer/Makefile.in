prefix=		@prefix@
srcdir=		@srcdir@

INSTALL=	@INSTALL@

MK_PREFIX=	@MK_PREFIX@

SRCS=		dzr.app.mk			\
		dzr.aw.mk			\
		dzr.clean.mk			\
		dzr.dep.mk			\
		dzr.freebsd.mk			\
		dzr.glapp.aw.mk			\
		dzr.glapp.mk			\
		dzr.glapp.sl.mk			\
		dzr.glswitcher.app.aw.mk	\
		dzr.glswitcher.app.mk		\
		dzr.glswitcher.app.sl.mk	\
		dzr.hosttype.mk			\
		dzr.irix.mk			\
		dzr.juggler.glapp.mk		\
		dzr.juggler.mk			\
		dzr.juggler.pfapp.mk		\
		dzr.juggler.switcher.mk		\
		dzr.lib.mk			\
		dzr.linux.mk			\
		dzr.obj.mk			\
		dzr.pfapp.aw.mk			\
		dzr.pfapp.mk			\
		dzr.pfapp.sl.mk			\
		dzr.pfswitcher.app.aw.mk	\
		dzr.pfswitcher.app.mk		\
		dzr.pfswitcher.app.sl.mk	\
		dzr.sl.mk			\
		flt2pfb.mk			\
		Makefile.advanced-template	\
		Makefile.application-template	\
		Makefile.library-template

install:
	@$(srcdir)/mkinstalldirs $(prefix)
	@for file in $(SRCS) ; do 					\
            new_file=`echo $$file | sed -e 's/^dzr/$(MK_PREFIX)/'` ;	\
            echo "$$file --> $(prefix)/$$new_file" ;			\
            $(INSTALL) -m 644 $$file $(prefix)/$$new_file ;		\
          done
