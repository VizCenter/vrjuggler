<?xml version="1.0" encoding="UTF-8"?>
<project name="jccl_rtrc" default="dist" basedir=".">
   <property name="srcdir" location="@srcdir@" />
   <property name="topdir" location="@topdir@" />
   <property name="debug" value="on" />
   <property name="optimize" value="off" />

   <path id="tweek.classpath">
      <pathelement path="@TWEEK_JARS@" />
      <pathelement path="@TWEEK_EXT_JARS@" />
   </path>

   <path id="jccl_config.classpath">
      <pathelement path="${topdir}/config/jccl_config.jar" />
   </path>

   <property name="tweek.classpath" refid="tweek.classpath" />
   <property name="jccl_config.classpath" refid="jccl_config.classpath" />

   <!-- Compile all java sources generated from IDL -->
   <target name="compile_idl">
      <javac destdir="."
             deprecation="on"
             debug="${debug}"
             optimize="${optimize}">
         <src path="${srcdir}" />
         <include name="jccl/*.java" />
         <classpath>
            <pathelement path="${tweek.classpath}" />
         </classpath>
      </javac>
   </target>

   <!-- Compile all java sources -->
   <target name="compile">
      <javac destdir="."
             deprecation="on"
             debug="${debug}"
             optimize="${optimize}">
         <src path="${srcdir}" />
         <include name="org/vrjuggler/jccl/rtrc/**" />
         <classpath>
            <pathelement path="${tweek.classpath}" />
            <pathelement path="${jccl_config.classpath}" />
            <pathelement path="jccl/**" />
         </classpath>
      </javac>
   </target>

   <!-- Create the distribution jar -->
   <target name="dist" depends="compile_idl,compile">
      <jar destfile="jccl_rtrc.jar" basedir=".">
         <include name="org/vrjuggler/jccl/rtrc/**" />
         <include name="jccl/**/*.class" />
      </jar>
   </target>

   <!-- Clean up -->
   <target name="clean">
      <delete failonerror="false">
         <fileset dir="org" includes="**/*.class" />
      </delete>
      <delete file="jccl_rtrc.jar" failonerror="false" />
   </target>
</project>
