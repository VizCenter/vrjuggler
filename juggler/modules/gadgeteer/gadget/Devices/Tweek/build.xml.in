<?xml version="1.0" encoding="UTF-8"?>
<project name="tweek" default="dist" basedir=".">
   <property name="srcdir" location="@srcdir@" />
   <property name="topdir" location="@topdir@" />
   <property name="debug" value="on" />
   <property name="optimize" value="off" />

   <path id="gadget.classpath">
      <pathelement path="@TWEEK_JARS@" />
      <pathelement path="@JCCL_JARS@" />
   </path>

   <property name="gadget.classpath" refid="gadget.classpath" />

   <!-- Compile all java sources generated from IDL -->
   <target name="compile_idl">
      <javac destdir="."
             deprecation="on"
             debug="${debug}"
             optimize="${optimize}">
         <src path="." />
         <include name="gadget/**" />
         <classpath>
            <pathelement path="${gadget.classpath}" />
         </classpath>
      </javac>
   </target>

   <!-- Compile all java sources -->
   <target name="compile">
      <javac destdir="."
             deprecation="on"
             debug="${debug}"
             optimize="${optimize}">
         <src path="${srcdir}" />
         <include name="org/vrjuggler/gadget/tweekgadget/**" />
         <classpath>
            <pathelement path="${gadget.classpath}" />
            <pathelement path="." />
         </classpath>
      </javac>
   </target>

   <!-- Create the distribution jar -->
   <target name="dist" depends="compile_idl,compile">
      <jar destfile="TweekGadget.jar" basedir=".">
         <include name="org/vrjuggler/gadget/tweekgadget/*.class" />
         <include name="gadget/*.class" />
      </jar>
   </target>

   <!-- Clean up -->
   <target name="clean">
      <delete failonerror="false">
         <fileset dir="org" includes="**/*.class" />
      </delete>
      <delete file="TweekGadget.jar" failonerror="false" />
   </target>
</project>
