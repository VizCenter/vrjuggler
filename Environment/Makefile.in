# -----------------------------------------------------------------------------
# Makefile.in for juggler/Environment.  It requires GNU make.
# $Id$
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Environment
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Environment
WORKDIR		= ${topdir}/Environment

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.o ${OBJDIR}

ENVIRONTMENT_SRCS	:= vjEnvironmentManager.cpp	\
                           vjConnect.cpp                \
		           vjCommand.cpp                \
		           vjTimedUpdate.cpp

ENVIRONMENT_OBJECTS	:= ${addprefix ${OBJDIR}/,${ENVIRONTMENT_SRCS:.cpp=.o}}
DEPEND_FILES		:= ${ENVIRONTMENT_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${ENVIRONMENT_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${ENVIRONMENT_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif
