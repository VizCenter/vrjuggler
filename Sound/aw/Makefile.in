# -----------------------------------------------------------------------------
# Makefile.in for juggler/Sound/aw.  It requires GNU make.
# $Id$
#
# Generated for use on @PLATFORM@
# -----------------------------------------------------------------------------

default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Sound/aw
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@

# If we are not building in the current directory (the default), put all the
# object files in the aw subdirectory of ${OBJDIR}.
ifneq (${OBJDIR}, .)
    OBJDIR	:= ${OBJDIR}/aw
endif

INCLUDES	+= @AW_INC@
INSTALL		= @INSTALL@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Sound/aw
WORKDIR		= ${topdir}/Sound/aw

# Include source building, dependency and installation targets.
include ${MKPATH}/vj.compile.mk
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

# Search path for source code and object files.
vpath
vpath %.c @srcdir@
vpath %.cpp @srcdir@
vpath %.${OBJ_FILE_SUFFIX} ${OBJDIR}

AUDIO_WORKS	:= @AUDIO_WORKS@

AW_SRCS 	:= AwSound.cpp			\
                   AwSoundEngine.cpp

AW_OBJECTS	:= ${addprefix ${OBJDIR}/,${AW_SRCS:.cpp=.${OBJ_FILE_SUFFIX}}}
DEPEND_FILES	:= ${AW_SRCS:.cpp=.d}

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: beforebuild ${AW_OBJECTS}

beforebuild:
ifeq (${AUDIO_WORKS}, Y)
	@${SHELL} ${scriptdir}/mkinstalldirs ${OBJDIR}
endif

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${AW_OBJECTS}

# -----------------------------------------------------------------------------
# Include dependencies generated by make automatically.
# -----------------------------------------------------------------------------
ifndef DO_CLEANDEPEND
    include ${DEPEND_FILES}
endif
