instlinks=		$(topdir)/instlinks
releasedir=		@JUGGLERROOT_ABS@/release
scriptdir=		$(releasedir)/scripts
top_srcdir=		@top_srcdir@

DIR_PERMS=		@DIR_PERMS@
EXEC_PERMS=		@EXEC_PERMS@
FILE_PERMS=		@FILE_PERMS@
GROUP_NAME=		@GROUP_NAME@
OWNER_NAME=		@OWNER_NAME@

ifdef GROUP_NAME
   GROUP_OPT_UNIX?=	-g $(GROUP_NAME)
endif

EXTROOT_ABS=		@EXTROOT_ABS@
JUGGLERROOT_ABS=	@JUGGLERROOT_ABS@
LN_S=			@LN_S@
MAKEFLAGS+=		--no-print-directory
MKINSTALLDIRS=		$(scriptdir)/mkinstalldirs
PERL=			@PERL@
RM_LN=			@RM_LN@

TARGETS=		@TARGETS@
EXTS?=			.h

world release:
	@$(MAKE) buildworld
	@$(MAKE) installworld

all buildworld debug optim profiled dbg dbg-dso opt opt-dso prof	\
prof-dso links:
	$(MKINSTALLDIRS) $(instlinks)/include
ifneq ($(TARGETS), )
	@for target in $(TARGETS) ; do					\
            $(MAKE) links-$$target || exit 1;				\
          done
endif

links-boost:
	cd $(instlinks)/include && rm -rf ./boost && mkdir boost &&	\
          cd ./boost && $(LN_S) $(EXTROOT_ABS)/boost/boost/* ./

links-cppdom:
	cd $(instlinks)/include && $(RM_LN) ./cppdom &&			\
          $(LN_S) $(EXTROOT_ABS)/cppdom/cppdom ./

links-gmtl:
	cd $(instlinks)/include && $(RM_LN) ./gmtl &&			\
          $(LN_S) $(EXTROOT_ABS)/GMTL/gmtl ./

links-init:
	cd $(instlinks)/include && $(RM_LN) ./init && \
          $(LN_S) $(EXTROOT_ABS)/init ./

links-doozer:
	$(SHELL) $(MKINSTALLDIRS) $(instlinks)/share
	cd $(instlinks)/share && $(RM_LN) ./Doozer &&			\
          $(LN_S) $(EXTROOT_ABS)/Doozer ./

install install-debug install-optim install-dbg install-dbg-dso		\
install-opt install-opt-dso install-profiled install-prof		\
install-prof-dso installworld:
ifneq ($(TARGETS), )
	@for target in $(TARGETS) ; do					\
            $(MAKE) install-$$target || exit 1;				\
          done
endif

# A custom installation is needed for Boost because the install-dir.pl script
# needs to be picky.  We only want to copy over header files, but the C++ C
# compatibility headers do not have an extension.  Thus, they must be installed
# separately.
install-boost:
	@$(SHELL) $(MKINSTALLDIRS) $(includedir)/boost
	@$(PERL) $(scriptdir)/install-dir.pl -m $(FILE_PERMS)		\
          $(GROUP_OPT_UNIX) -e .hpp -o $(includedir)/boost 		\
          -i $(EXTROOT_ABS)/boost/boost
	@$(PERL) $(scriptdir)/install-dir.pl -m $(FILE_PERMS)		\
          $(GROUP_OPT_UNIX) -o $(includedir)/boost/compatibility 	\
          -i $(EXTROOT_ABS)/boost/boost/compatibility

install-init:
	@$(MAKE) DIRS="init" generic-header-install

install-cppdom:
	@$(MAKE) DIRS="cppdom/cppdom" generic-header-install

install-gmtl:
	@$(MAKE) DIRS="GMTL/gmtl" generic-header-install

install-doozer:
	@$(PERL) $(scriptdir)/install-dir.pl -m $(FILE_PERMS)		\
          $(GROUP_OPT_UNIX) -e .mk -i $(EXTROOT_ABS)/Doozer		\
          -o $(datadir)/Doozer

generic-header-install:
ifneq ($(DIRS), )
	for dir in $(DIRS) ; do						\
            header_dir=`echo $$dir | sed -e 's/\// /g' | awk '{ print $$NF }' -` ; \
            $(SHELL) $(MKINSTALLDIRS) $(includedir)/$$header_dir ;	\
            $(PERL) $(scriptdir)/install-dir.pl -m $(FILE_PERMS)	\
              $(GROUP_OPT_UNIX) -e $(EXTS) -i $(EXTROOT_ABS)/$$dir	\
              -o $(includedir)/$$header_dir ;				\
          done
endif

clean cleandepend clobber:
