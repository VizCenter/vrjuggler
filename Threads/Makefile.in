default: all

# Include common definitions.
include @topdir@/Makefile.base

includedir	= @includedir@/Threads
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
VJROOT		= ${top_srcdir}
VJ_SRCDIR	= @VJ_SRCDIR@/Threads
WORKDIR		= ${topdir}/Threads

# Include dependency and installation targets.
include ${MKPATH}/vj.dep.mk
include ${MKPATH}/vj.install.mk

#--- Search path -------
vpath
vpath %.c @srcdir@
vpath %.C @srcdir@
vpath %.o ${OBJDIR}
#------------------------

DEPEND_SRCS	:= vjThreadFunctor.C \
		   vjBaseThread.C \
		   vjThreadManager.C

ifeq (@THREAD_SYS@,POSIX)
    DEPEND_SRCS += vjThreadPosix.C
endif
ifeq (@THREAD_SYS@,SGI_IPC)
    DEPEND_SRCS += vjThreadSGI.C
endif
ifeq (@THREAD_SYS@,WIN32)
    DEPEND_SRCS += vjThreadWin32.C
endif

THREAD_OBJECTS	= $(addprefix $(OBJDIR)/,$(DEPEND_SRCS:.C=.o))

# -----------------------------------------------------------------------------
# Library targets.
# -----------------------------------------------------------------------------
all dbg opt dso ddso obj: ${THREAD_OBJECTS}

# -----------------------------------------------------------------------------
# Clean-up.
# -----------------------------------------------------------------------------
CLEAN_FILES	+= ${THREAD_OBJECTS}

